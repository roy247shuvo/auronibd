<div class="max-w-4xl mx-auto px-6 py-20">
    
    <div class="text-center mb-12">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-50 text-green-600 mb-4">
            <span class="material-icons-outlined text-3xl">check_circle</span>
        </div>
        <h1 class="font-serif text-3xl italic text-gray-900">Thank you, <%= order.guest_name %>!</h1>
        <p class="text-gray-500 mt-2">Your order has been received.</p>
        <div class="mt-4 inline-block bg-gray-50 px-4 py-2 rounded-sm border border-gray-200">
            <span class="text-xs uppercase tracking-widest text-gray-400">Order No:</span>
            <span class="font-mono font-bold text-gray-900 ml-2"><%= order.order_number %></span>
        </div>
    </div>

    <div class="flex flex-col lg:flex-row gap-8">
        
        <div class="flex-1 bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
            <h2 class="font-bold text-xs uppercase tracking-widest border-b border-gray-100 pb-4 mb-4">Order Summary</h2>
            
            <div class="space-y-4">
                <% items.forEach(item => { %>
                <div class="flex gap-4">
                    <div class="w-16 h-20 bg-gray-50 rounded-sm overflow-hidden border border-gray-100 flex-shrink-0">
                        <img src="<%= item.image %>" class="w-full h-full object-cover">
                    </div>
                    <div class="flex-1">
                        <h3 class="text-sm font-bold text-gray-900"><%= item.product_name %></h3>
                        <p class="text-[10px] text-gray-500 uppercase tracking-wide mt-1">
                            <%= item.color %> / <%= item.size %>
                        </p>
                        <p class="text-xs text-gray-400 mt-1">Qty: <%= item.quantity %></p>
                    </div>
                    <div class="text-sm font-bold text-gray-900">
                        TK. <%= item.price * item.quantity %>
                    </div>
                </div>
                <% }) %>
            </div>

            <div class="border-t border-dashed border-gray-200 mt-6 pt-6 space-y-2 text-sm">
                <div class="flex justify-between text-gray-600">
                    <span>Subtotal</span>
                    <span>TK. <%= order.product_subtotal %></span>
                </div>
                <div class="flex justify-between text-gray-600">
                    <span>Delivery Charge</span>
                    <span>TK. <%= order.delivery_charge %></span>
                </div>
                <div class="flex justify-between font-bold text-lg text-gray-900 border-t border-gray-200 pt-3 mt-2">
                    <span>Total Amount</span>
                    <span>TK. <%= order.total_amount %></span>
                </div>
            </div>

            <div class="mt-6 p-4 rounded-sm flex justify-between items-center <%= order.payment_method === 'cod' ? 'bg-orange-50 text-orange-800' : 'bg-green-50 text-green-800' %>">
                <div>
                    <p class="text-[10px] font-bold uppercase tracking-widest opacity-70">Already Paid</p>
                    <p class="text-lg font-bold">
                        TK. <%= order.paid_amount %>
                    </p>
                </div>
                <div class="text-right">
                    <p class="text-[10px] font-bold uppercase tracking-widest opacity-70">Due Amount</p>
                    <p class="text-lg font-bold">
                        TK. <%= order.total_amount - order.paid_amount %>
                    </p>
                </div>
            </div>
        </div>

        <div class="w-full lg:w-80 space-y-6">
            <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
                <h2 class="font-bold text-xs uppercase tracking-widest border-b border-gray-100 pb-4 mb-4">Delivery Details</h2>
                
                <div class="space-y-4 text-sm">
                    <div>
                        <span class="block text-[10px] text-gray-400 uppercase font-bold mb-1">Name</span>
                        <span class="font-medium text-gray-900"><%= order.guest_name %></span>
                    </div>
                    <div>
                        <span class="block text-[10px] text-gray-400 uppercase font-bold mb-1">Phone</span>
                        <span class="font-medium text-gray-900"><%= order.guest_phone %></span>
                    </div>
                    <div>
                        <span class="block text-[10px] text-gray-400 uppercase font-bold mb-1">Address</span>
                        <span class="font-medium text-gray-900 leading-relaxed"><%= order.shipping_address %></span>
                    </div>
                </div>
            </div>

            <a href="/" class="block w-full bg-black text-white text-center py-4 text-xs font-bold uppercase tracking-widest rounded-sm hover:bg-gray-800 transition shadow-lg">
                Continue Shopping
            </a>
        </div>

    </div>
</div>