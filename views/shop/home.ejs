<style>
    @import url('https://fonts.googleapis.com/css2?family=Hind+Siliguri:wght@300;400;500;600;700&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Galada&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Italiana&display=swap');

    .font-bangla-title { font-family: 'Galada', cursive; }
    .font-bangla-body { font-family: 'Hind Siliguri', sans-serif; }
    .font-aesthetic { font-family: 'Italiana', serif; }

    /* Hide Scrollbar but keep functionality */
    .hide-scrollbar::-webkit-scrollbar { display: none; }
    .hide-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>

<div class="bg-white min-h-screen pb-20 overflow-x-hidden font-bangla-body">
    
    <%- include('components/hero') %>

    <div class="py-10 px-6 text-center bg-[#FFFBF0]">
        <h2 class="font-bangla-title text-2xl md:text-3xl text-[#800000] mb-2 leading-relaxed">
            "শাড়িতেই নারী, শাড়িতেই আমি"
        </h2>
        <p class="font-aesthetic text-gray-500 text-sm tracking-widest uppercase">
            Tradition • Elegance • You
        </p>
    </div>

    <div class="py-8 border-b border-gray-50">
        <div class="px-4 mb-4 flex justify-between items-end">
            <div>
                <h3 class="font-aesthetic text-2xl text-gray-900">New Arrivals</h3>
                <p class="text-xs text-gray-500 font-bangla-body">আমাদের নতুন কালেকশন</p>
            </div>
            <a href="/shop?sort=newest" class="text-xs font-bold uppercase underline decoration-[#800000] text-gray-800">View All</a>
        </div>

        <div class="flex overflow-x-auto gap-4 px-4 pb-4 snap-x hide-scrollbar">
            <% if (typeof products !== 'undefined' && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="snap-center shrink-0 w-40 md:w-48 group relative">
                        <a href="/product/<%= product.slug %>" class="block aspect-[2/3] rounded-lg overflow-hidden bg-gray-100 relative">
                            <img src="<%= product.image_url || '/uploads/placeholder.jpg' %>" 
                                 class="w-full h-full object-cover transition duration-700 group-hover:scale-105" 
                                 loading="lazy" alt="<%= product.name %>">
                            
                            <div class="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition"></div>
                        </a>

                        <div class="mt-3 text-center">
                            <h3 class="text-xs font-bold text-gray-800 line-clamp-1"><%= product.name %></h3>
                            <p class="text-sm text-[#800000] font-bold mt-1">৳<%= product.price %></p>
                            
                            <a href="/product/<%= product.slug %>" 
                               class="mt-2 block w-full border border-gray-200 rounded-full py-1.5 text-[10px] uppercase font-bold tracking-wider hover:bg-black hover:text-white transition-colors">
                                View Details
                            </a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center w-full text-sm text-gray-400 py-10">No new arrivals yet.</p>
            <% } %>
        </div>
    </div>

    <div class="py-10 px-4">
        <div class="text-center mb-6">
            <span class="font-aesthetic text-4xl text-gray-100 absolute left-1/2 -translate-x-1/2 -translate-y-4 -z-10">ART</span>
            <h2 class="font-bangla-title text-2xl text-gray-800">নিখুঁত কারুকাজ</h2>
            <p class="text-xs text-gray-400 uppercase tracking-widest font-aesthetic">Shop by Artistry</p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
            <% if (typeof work_types !== 'undefined') { %>
                <% work_types.forEach(w => { %>
                    <a href="/shop?work_type=<%= w.id %>" class="group relative rounded-xl overflow-hidden aspect-[4/5] bg-gray-100 shadow-sm hover:shadow-md transition">
                        <img src="<%= w.media_url || '/uploads/placeholder.jpg' %>" 
                             class="w-full h-full object-cover opacity-90 group-hover:opacity-100 group-hover:scale-110 transition duration-700">
                        
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
                        
                        <div class="absolute bottom-3 left-3 text-white">
                            <h3 class="font-bangla-title text-lg leading-none"><%= w.name %></h3>
                            <span class="text-[10px] opacity-80 font-sans"><%= w.product_count %> Designs</span>
                        </div>
                    </a>
                <% }) %>
            <% } %>
        </div>
    </div>

    <div class="py-10 px-4 bg-gray-50/50">
        <div class="text-center mb-6">
             <span class="font-aesthetic text-4xl text-gray-200 absolute left-1/2 -translate-x-1/2 -translate-y-4 -z-10">TOUCH</span>
            <h2 class="font-bangla-title text-2xl text-gray-800">আরামদায়ক কাপড়</h2>
            <p class="text-xs text-gray-400 uppercase tracking-widest font-aesthetic">Shop by Fabric</p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
            <% if (typeof fabrics !== 'undefined') { %>
                <% fabrics.forEach(f => { %>
                    <a href="/shop?fabric=<%= f.id %>" class="group relative rounded-xl overflow-hidden aspect-[4/5] bg-gray-100 shadow-sm hover:shadow-md transition">
                        <img src="<%= f.media_url || '/uploads/placeholder.jpg' %>" 
                             class="w-full h-full object-cover opacity-90 group-hover:opacity-100 group-hover:scale-110 transition duration-700">
                        
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
                        
                        <div class="absolute bottom-3 left-3 text-white">
                            <h3 class="font-bangla-title text-lg leading-none"><%= f.name %></h3>
                            <span class="text-[10px] opacity-80 font-sans"><%= f.product_count %> Items</span>
                        </div>
                    </a>
                <% }) %>
            <% } %>
        </div>
    </div>

    <div class="py-10 px-4">
        <div class="text-center mb-8">
            <h2 class="font-bangla-title text-2xl text-gray-800">রঙের মেলা</h2>
            <p class="text-xs text-gray-400 uppercase tracking-widest font-aesthetic">Shop by Shade</p>
        </div>

        <div class="grid grid-cols-3 md:grid-cols-6 gap-4">
            <% if (typeof colors !== 'undefined') { %>
                <% colors.forEach(c => { %>
                    <a href="/shop?color=<%= c.name %>" class="group flex flex-col items-center gap-2">
                        <div class="w-full aspect-square rounded-full overflow-hidden border-[3px] p-1 transition-transform duration-300 group-hover:scale-105"
                             style="border-color: <%= c.hex_code || '#ddd' %>;">
                            
                            <div class="w-full h-full rounded-full overflow-hidden bg-gray-100 relative">
                                <img src="<%= c.media_url || '/uploads/placeholder.jpg' %>" 
                                     class="w-full h-full object-cover">
                                
                                <div class="absolute inset-0 opacity-20" style="background-color: <%= c.hex_code %>;"></div>
                            </div>
                        </div>
                        
                        <span class="text-xs font-bold text-gray-700 font-bangla-body group-hover:text-[#800000]">
                            <%= c.name %>
                        </span>
                    </a>
                <% }) %>
            <% } %>
        </div>
    </div>

    <div class="py-16 bg-[#222] text-white">
        <div class="px-6 mb-8 text-center">
            <h2 class="font-aesthetic text-3xl md:text-5xl mb-2">Editor's Collections</h2>
            <div class="w-16 h-0.5 bg-[#D4AF37] mx-auto"></div>
        </div>

        <div class="px-4 grid grid-cols-1 md:grid-cols-2 gap-6 max-w-6xl mx-auto">
            <% if (typeof collections !== 'undefined') { %>
                <% collections.forEach((col, index) => { %>
                    <a href="/shop?collection=<%= col.id %>" 
                       class="relative block group overflow-hidden <%= index === 0 ? 'md:row-span-2 md:h-full' : 'h-64' %>">
                        
                        <img src="<%= col.image_url %>" class="w-full h-full object-cover transition duration-1000 group-hover:scale-110 opacity-80 group-hover:opacity-100">
                        
                        <div class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-colors"></div>
                        
                        <div class="absolute inset-0 flex flex-col items-center justify-center text-center p-4 border-2 border-transparent group-hover:border-[#D4AF37]/50 m-4 transition-all duration-500">
                            <h3 class="font-aesthetic text-3xl md:text-4xl tracking-wider mb-2 translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                                <%= col.name %>
                            </h3>
                            <span class="text-[10px] uppercase tracking-[0.2em] bg-white text-black px-3 py-1 opacity-0 group-hover:opacity-100 transition-opacity duration-700 delay-100">
                                Explore
                            </span>
                        </div>
                    </a>
                <% }) %>
            <% } %>
        </div>
        
        <div class="text-center mt-10">
            <a href="/shop" class="text-xs font-bold border-b border-white pb-1 hover:text-[#D4AF37] hover:border-[#D4AF37] transition">
                VIEW ALL CAMPAIGNS
            </a>
        </div>
    </div>

</div>