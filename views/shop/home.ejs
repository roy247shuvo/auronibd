<style>
    @import url('https://fonts.googleapis.com/css2?family=Galada&family=Hind+Siliguri:wght@300;400;500;600&family=Italiana&display=swap');

    .font-bangla-title { font-family: 'Galada', cursive; }
    .font-bangla-body { font-family: 'Hind Siliguri', sans-serif; }
    .font-aesthetic { font-family: 'Italiana', serif; }

    /* Animation Utilities */
    .animate-float-slow { animation: float 6s ease-in-out infinite; }
    @keyframes float { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-10px); } }
    
    /* Hide Scrollbar */
    .hide-scrollbar::-webkit-scrollbar { display: none; }
    .hide-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>

<div class="bg-white min-h-screen pb-20 overflow-x-hidden font-bangla-body">
    
    <%- include('components/hero') %>

    <div class="relative py-12 px-6 text-center bg-[#FFFBF0] border-b border-[#800000]/5">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-24 h-24 bg-[#800000]/5 rounded-full blur-3xl"></div>
        <h2 class="font-bangla-title text-3xl md:text-4xl text-[#800000] mb-3 leading-relaxed relative z-10 animate-float-slow">
            "শাড়িতেই নারী, শাড়িতেই আমি"
        </h2>
        <p class="font-aesthetic text-gray-500 text-xs tracking-[0.3em] uppercase relative z-10">
            Tradition • Grace • Elegance
        </p>
    </div>

    <div class="py-12 border-b border-gray-50">
        <%- include('components/new_arrivals') %>
    </div>

    <div class="py-12 bg-white">
        <%- include('components/shop_by_work') %>
    </div>

    <div class="py-12 bg-[#FFFBF0]/30">
        <%- include('components/shop_by_fabric') %>
    </div>

    <div class="py-12 bg-white">
        <%- include('components/shop_by_color') %>
    </div>

    <div class="py-12">
        <%- include('components/collections_grid') %>
    </div>

</div>