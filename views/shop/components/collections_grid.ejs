<section class="py-20 bg-white border-b border-gray-100 overflow-hidden">
    <div class="max-w-[1800px] mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="font-serif text-3xl md:text-4xl text-brand-black mb-2">দিতুর কালেকশন</h2>
            <div class="w-12 h-0.5 bg-brand-gold mx-auto"></div>
        </div>
        
        <div class="flex overflow-x-auto space-x-6 pb-8 no-scrollbar snap-x justify-start md:justify-center">
            <% collections.forEach(col => { %>
                <a href="/shop?collection=<%= col.id %>" class="snap-start block w-[280px] md:w-[320px] h-[500px] relative group flex-shrink-0 overflow-hidden rounded-sm cursor-pointer shadow-sm hover:shadow-xl transition-all duration-500">
                    
                    <img src="<%= col.image_url %>" class="w-full h-full object-cover transition duration-[1.5s] ease-out group-hover:scale-110">
                    
                    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-80 transition duration-500 group-hover:opacity-90"></div>
                    
                    <div class="absolute bottom-0 left-0 w-full p-8 text-center flex flex-col items-center">
                        <div class="w-12 h-[2px] bg-white/50 mb-4 transition-all duration-500 ease-out group-hover:w-full group-hover:bg-brand-gold"></div>
                        <h3 class="font-serif text-3xl text-white leading-tight mb-2 tracking-wide group-hover:-translate-y-1 transition-transform duration-500"><%= col.name %></h3>
                        <span class="text-[10px] text-gray-300 uppercase tracking-[0.3em] group-hover:text-white transition-colors duration-300">Collection 2026</span>
                    </div>
                </a>
            <% }) %>
        </div>

        <div class="text-center mt-10">
            <a href="/shop?cat=collections" class="inline-block border border-black px-10 py-3 text-xs font-bold uppercase tracking-widest hover:bg-black hover:text-white transition-all duration-300">
                View All Campaigns
            </a>
        </div>
    </div>
</section>