<div class="px-4 md:px-8">
    <div class="flex justify-between items-end mb-6">
        <div>
            <h3 class="font-aesthetic text-3xl text-gray-900">New Arrivals</h3>
            <p class="text-xs text-[#800000] font-bangla-body mt-1">আমাদের নতুন কালেকশন</p>
        </div>
        <a href="/shop?sort=newest" class="text-xs font-bold uppercase underline decoration-[#800000] hover:text-[#800000]">View All</a>
    </div>

    <div class="flex overflow-x-auto gap-5 pb-6 snap-x hide-scrollbar">
        <% if (typeof products !== 'undefined' && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="snap-center shrink-0 w-44 md:w-56 group relative">
                    <a href="/product/<%= product.sku %>" class="block aspect-[2/3] rounded-lg overflow-hidden bg-gray-100 relative shadow-sm border border-gray-100">
                        <% 
                           // Fix logic: Ensure path has leading slash if missing
                           let imgUrl = product.image_url || '/uploads/placeholder.jpg';
                           if(!imgUrl.startsWith('/') && !imgUrl.startsWith('http')) imgUrl = '/' + imgUrl;
                        %>
                        <img src="<%= imgUrl %>" 
                             class="w-full h-full object-cover transition duration-1000 group-hover:scale-110" 
                             loading="lazy" alt="<%= product.name %>">
                        
                        <% if (product.compare_price > product.price) { %>
                            <span class="absolute top-2 left-2 bg-[#800000] text-white text-[10px] px-2 py-0.5 uppercase tracking-wider">Sale</span>
                        <% } %>
                    </a>

                    <div class="mt-3 text-center">
                        <h3 class="text-sm font-bold text-gray-800 font-bangla-body line-clamp-1"><%= product.name %></h3>
                        <div class="flex justify-center gap-2 items-center mt-1 text-sm font-sans">
                            <span class="font-bold text-[#800000]">৳<%= product.price %></span>
                            <% if (product.compare_price > product.price) { %>
                                <span class="text-gray-400 line-through text-xs">৳<%= product.compare_price %></span>
                            <% } %>
                        </div>
                        
                        <a href="/product/<%= product.sku %>" 
                           class="mt-2 block w-full border border-gray-900 text-gray-900 bg-transparent hover:bg-gray-900 hover:text-white text-[10px] uppercase font-bold py-2 transition-colors tracking-widest">
                             বিস্তারিত দেখুন
                        </a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="w-full text-center py-10 text-gray-400">আপাতত নতুন কিছু নেই</div>
        <% } %>
    </div>
</div>