<div class="px-4 md:px-8">
    <div class="text-center mb-10">
        <h2 class="font-bangla-title text-2xl text-[#800000] mb-1">রঙের মেলা</h2>
        <p class="font-aesthetic text-xs text-gray-400 uppercase tracking-[0.2em]">Shop by Shade</p>
    </div>

    <div class="flex flex-wrap justify-center gap-6">
        <% colors.forEach(c => { 
            let imgUrl = c.media_url || '/uploads/placeholder.jpg';
            if(!imgUrl.startsWith('/') && !imgUrl.startsWith('http')) imgUrl = '/' + imgUrl;
        %>
            <a href="/shop?color=<%= c.name %>" class="group flex flex-col items-center gap-3">
                <div class="w-20 h-20 rounded-full p-[3px] shadow-sm transition-transform duration-300 group-hover:scale-110"
                     style="border: 2px solid <%= c.hex_code || '#ddd' %>;">
                    
                    <div class="w-full h-full rounded-full overflow-hidden relative">
                         <img src="<%= imgUrl %>" class="w-full h-full object-cover">
                    </div>
                </div>
                
                <span class="text-xs font-bold text-gray-600 font-bangla-body group-hover:text-[#800000]">
                    <%= c.name %>
                </span>
            </a>
        <% }) %>
    </div>
</div>