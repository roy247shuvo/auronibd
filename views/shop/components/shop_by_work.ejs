<div class="px-4 md:px-8">
    <div class="text-center mb-10">
        <h2 class="font-bangla-title text-2xl text-[#800000] mb-1">নিখুঁত কারুকাজ</h2>
        <p class="font-aesthetic text-xs text-gray-400 uppercase tracking-[0.2em]">Craftsmanship</p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% work_types.forEach(w => { 
            let imgUrl = w.media_url || '/uploads/placeholder.jpg';
            imgUrl = (imgUrl || '').toString(); 
                if(imgUrl && !imgUrl.startsWith('/') && !imgUrl.startsWith('http')) {
                    imgUrl = '/' + imgUrl;
                }
                if (!imgUrl) imgUrl = '/uploads/placeholder.jpg';
        %>
            <a href="/shop?work_type=<%= w.id %>" class="group relative rounded-xl overflow-hidden aspect-[3/4] shadow-sm">
                <img src="<%= imgUrl %>" 
                     class="w-full h-full object-cover transition duration-1000 group-hover:scale-110 opacity-90 group-hover:opacity-100">
                
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
                
                <div class="absolute bottom-4 left-0 w-full text-center">
                    <h3 class="font-bangla-title text-white text-xl group-hover:-translate-y-1 transition-transform"><%= w.name %></h3>
                    <span class="text-[10px] text-white/80 uppercase tracking-widest border border-white/30 px-2 py-0.5 rounded-full">
                        <%= w.product_count %> Designs
                    </span>
                </div>
            </a>
        <% }) %>
    </div>
</div>