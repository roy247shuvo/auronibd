<script>
    const rawProductData = <%- JSON.stringify(productData) %>;
    // [FIX 1] Capture Pre-Order status from server
    const isPreOrderProduct = "<%= product.is_preorder %>" === "yes";

    function productPage() {
        return {
            productData: rawProductData,
            currentImages: [],
            availableSizes: [],
            selectedColorName: '',
            selectedSizeName: '',
            selectedVariantId: null,
            currentVariant: null,
            showSizeChart: false,

            initProduct() {
                if (this.productData.colors.length > 0) {
                    this.selectColor(this.productData.colors[0]);
                }
            },

            selectColor(colorObj) {
                this.selectedColorName = colorObj.name;
                this.currentImages = colorObj.images;
                this.availableSizes = colorObj.variants;

                const sizeStillAvailable = this.availableSizes.find(v => v.id === this.selectedVariantId);
                
                // Auto-select logic
                if (!sizeStillAvailable && this.availableSizes.length > 0) {
                    const inStock = this.availableSizes.find(v => v.stock_quantity > 0);
                    // If everything is sold out, pick the first one
                    this.selectSize(inStock || this.availableSizes[0]);
                }
            },

            selectSize(variant) {
                this.selectedVariantId = variant.id;
                this.selectedSizeName = variant.size;
                this.currentVariant = variant;
            },

            addToCart() {
                if (!this.selectedVariantId) {
                    alert("STOP: You have not selected a size yet!");
                    return Promise.reject("No size selected"); // Return failed promise
                }
                
                // [FIX 2] Allow 0 stock if Pre-Order is active
                if (this.currentVariant && this.currentVariant.stock_quantity <= 0 && !isPreOrderProduct) {
                    alert("Sorry, this item is sold out.");
                    return Promise.reject("Sold out"); // Return failed promise
                }
            
                // [FIX 3] Return the Fetch Promise so buyNow can wait for it
                return fetch('/cart/add', {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        // Ensure this meta tag exists in your layout, otherwise remove this line
                        'CSRF-Token': document.querySelector('meta[name="csrf-token"]') ? document.querySelector('meta[name="csrf-token"]').getAttribute('content') : ''
                    },
                    body: JSON.stringify({ variantId: this.selectedVariantId, quantity: 1 })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.dispatchEvent(new CustomEvent('cart-updated'));
                        return true; // Success!
                    } else {
                        alert("SERVER ERROR: " + (data.message || "Unknown Error"));
                        return false;
                    }
                })
                .catch(error => {
                    alert("NETWORK ERROR: " + error);
                    return false;
                });
            },

            buyNow() {
                // [FIX 4] Wait for addToCart to finish before redirecting
                this.addToCart().then(success => {
                    if (success) {
                        window.location.href = '/checkout';
                    }
                });
            }
        }
    }
</script>