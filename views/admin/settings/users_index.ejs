<div class="p-6">
    <% if (!can('user_roles', 'write')) { %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6 rounded-r shadow-sm">
        <div class="flex">
            <div class="flex-shrink-0">
                <span class="material-icons-outlined text-yellow-400">lock</span>
            </div>
            <div class="ml-3">
                <p class="text-sm text-yellow-700">
                    <span class="font-bold">View Only Mode:</span> You do not have permission to manage users.
                </p>
            </div>
        </div>
    </div>
    <% } %>

    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Users & Roles</h2>
            <p class="text-sm text-gray-500">Manage system access and permissions</p>
        </div>
        <% if (can('user_roles', 'write')) { %>
        <a href="/admin/settings/users/add" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 flex items-center gap-2 shadow-lg shadow-red-200">
            <span class="material-icons-outlined">add</span> Add New User
        </a>
        <% } %>
    </div>

    <% if (typeof param !== 'undefined' && param.success) { %>
        <div class="mb-4 bg-green-100 text-green-700 px-4 py-3 rounded"><%= param.success %></div>
    <% } %>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50 text-gray-600 uppercase text-xs">
                <tr>
                    <th class="p-4">User</th>
                    <th class="p-4">Role</th>
                    <th class="p-4">Contact</th>
                    <th class="p-4 text-right">Action</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                <% users.forEach(u => { %>
                <tr class="hover:bg-gray-50">
                    <td class="p-4 font-medium text-gray-900"><%= u.name %></td>
                    <td class="p-4">
                        <% if(u.role === 'admin') { %>
                            <span class="bg-purple-100 text-purple-700 px-2 py-1 rounded text-xs font-bold">ADMIN</span>
                        <% } else if(u.role === 'owner') { %>
                            <span class="bg-blue-100 text-blue-700 px-2 py-1 rounded text-xs font-bold">OWNER</span>
                        <% } else { %>
                            <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs font-bold">USER</span>
                        <% } %>
                    </td>
                    <td class="p-4 text-sm text-gray-500"><%= u.email %><br><%= u.phone %></td>
                    <td class="p-4 text-right">
                        <% if (can('user_roles', 'write')) { %>
                        <a href="/admin/settings/users/edit/<%= u.id %>" class="text-gray-400 hover:text-red-600">
                            <span class="material-icons-outlined">edit</span>
                        </a>
                        <% } %>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>