<div id="receipt-modal" class="fixed inset-0 bg-black/80 z-[70] hidden flex items-center justify-center backdrop-blur-sm">
    <div class="bg-white rounded-lg shadow-2xl w-full max-w-md flex flex-col max-h-[90vh]">
        <div class="p-4 bg-gray-900 text-white flex justify-between items-center rounded-t-lg shrink-0">
            <h3 class="font-bold text-lg flex items-center gap-2">
                <span class="material-icons-outlined text-green-400">check_circle</span> 
                Order Confirmed
            </h3>
            <button onclick="closeModal('receipt-modal')" class="hover:text-red-400"><span class="material-icons-outlined">close</span></button>
        </div>
        
        <div class="flex-1 bg-gray-100 p-4 overflow-hidden relative">
            <div id="receipt-loading" class="absolute inset-0 flex items-center justify-center bg-gray-100 z-10">
                <span class="material-icons-outlined animate-spin text-4xl text-gray-400">hourglass_empty</span>
            </div>
            
            <iframe id="receipt-frame" class="w-full h-[400px] border border-gray-300 bg-white rounded shadow-sm"></iframe>
        </div>

        <div class="p-4 border-t border-gray-200 bg-white rounded-b-lg flex gap-3">
            <button onclick="printReceipt()" class="flex-1 bg-black text-white py-3 rounded-lg font-bold hover:bg-gray-800 flex items-center justify-center gap-2 shadow-lg">
                <span class="material-icons-outlined">print</span>
                PRINT RECEIPT
            </button>
            <button onclick="closeModal('receipt-modal')" class="px-6 py-3 border border-gray-300 rounded-lg font-bold hover:bg-gray-50 text-gray-700">
                Close
            </button>
        </div>
    </div>
</div>