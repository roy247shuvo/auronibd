            <div id="input-card" class="pay-section hidden space-y-3">
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Deposit to Bank</label>
                    <div class="relative">
                        <select id="card-bank-id" class="w-full pl-4 pr-4 py-3 border-2 border-gray-200 rounded-xl appearance-none focus:border-red-500 outline-none bg-white">
                            <% banks.forEach(b => { %>
                                <option value="<%= b.id %>"><%= b.bank_name %> - <%= b.account_number %></option>
                            <% }) %>
                        </select>
                        <span class="absolute right-3 top-3.5 text-gray-400 material-icons-outlined pointer-events-none">expand_more</span>
                    </div>
                </div>
                <div>
                     <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Transaction ID / Last 4 Digits</label>
                     <input type="text" id="card-trx" class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-red-500 outline-none" placeholder="Card Trx / Ref">
                </div>
            </div>

            <div id="input-trx" class="pay-section hidden">
    <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Transaction ID / Reference</label>
        <input type="text" id="trx-id" class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl text-lg focus:border-red-500 outline-none" placeholder="Enter TRX ID">
    </div>
    
    <div id="input-mfs" class="pay-section hidden space-y-3">
        <div>
            <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Select MFS Account</label>
            <div class="relative">
                <select id="mfs-id" class="w-full pl-4 pr-4 py-3 border-2 border-gray-200 rounded-xl appearance-none focus:border-red-500 outline-none bg-white">
                    <% mfs.forEach(m => { %>
                        <option value="<%= m.id %>"><%= m.account_name %> (<%= m.account_number %>)</option>
                    <% }) %>
                </select>
                <span class="absolute right-3 top-3.5 text-gray-400 material-icons-outlined pointer-events-none">expand_more</span>
            </div>
        </div>
        <div>
             <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Transaction ID</label>
             <input type="text" id="mfs-trx" class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-red-500 outline-none" placeholder="TrxID">
        </div>
    </div>
    
    <div id="input-bank" class="pay-section hidden space-y-3">
                <div><label class="block text-xs font-bold text-gray-500 uppercase mb-1">Select Bank</label><select id="bank-id" class="w-full p-3 border rounded-lg bg-white"><% banks.forEach(b => { %><option value="<%= b.id %>"><%= b.bank_name %> - <%= b.account_number %></option><% }) %></select></div>
                <div><label class="block text-xs font-bold text-gray-500 uppercase mb-1">Note</label><input type="text" id="bank-ref" class="w-full p-3 border rounded-lg"></div>
            </div>
            <button onclick="submitOrder()" class="w-full mt-6 bg-gray-900 text-white py-4 rounded-lg font-bold hover:bg-black transition-all">CONFIRM ORDER</button>
