<div class="h-[calc(100vh-80px)] -m-4 flex flex-col overflow-hidden bg-gray-100">
    
    <% if (!can('pos_terminal', 'write')) { %>
    <div class="bg-yellow-50 border-b border-yellow-400 p-2 text-center shadow-sm z-30">
        <p class="text-xs text-yellow-800 font-bold flex justify-center items-center gap-2">
            <span class="material-icons-outlined text-sm">lock</span> 
            View Only Mode: Transactions cannot be processed.
        </p>
    </div>
    <% } %>

    <div class="flex justify-between items-center px-4 py-2 bg-white border-b border-gray-200 shrink-0 shadow-sm z-20">
        <h1 class="text-lg font-bold text-gray-800 flex items-center gap-2">
            <span class="material-icons-outlined text-red-600">point_of_sale</span>
            POS Terminal
        </h1>
        
        <div class="flex items-center gap-3">
            <a href="/admin/pos/fullscreen" class="p-2 hover:bg-gray-100 rounded-full text-gray-600 flex items-center justify-center" title="Switch to Full Screen Layout">
                <span class="material-icons-outlined">fullscreen</span>
            </a>

            <div class="flex space-x-1 bg-gray-100 p-1 rounded-lg">
                <button onclick="switchWindow(1)" id="tab-1" class="px-4 py-1.5 bg-white text-gray-800 font-bold rounded shadow text-sm transition-all">Order 1</button>
                <button onclick="switchWindow(2)" id="tab-2" class="px-4 py-1.5 text-gray-500 font-medium rounded hover:bg-white/50 transition-all text-sm">Order 2</button>
            </div>
        </div>
    </div>

    <div class="flex h-full pb-0 gap-0">
        
        <div class="w-[70%] bg-white shadow-xl border-r border-gray-200 flex flex-col h-full z-10">
            <div class="p-4 border-b border-gray-100 bg-white grid grid-cols-2 gap-4">
                <div class="relative">
                    <span class="absolute left-3 top-2.5 text-gray-400 material-icons-outlined text-lg">phone</span>
                    <input type="text" id="cust-phone" placeholder="Phone Number" 
                           class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 outline-none text-sm font-bold disabled:bg-gray-100 disabled:text-gray-500" 
                           onkeyup="debounceCustomer(this.value)"
                           <%= can('pos_terminal', 'write') ? '' : 'disabled' %>>
                </div>
                <div class="relative">
                    <span class="absolute left-3 top-2.5 text-gray-400 material-icons-outlined text-lg">person</span>
                    <input type="text" id="cust-name-input" placeholder="Customer Name" 
                           class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 outline-none text-sm disabled:bg-gray-100 disabled:text-gray-500" 
                           oninput="updateCustName(this.value)"
                           <%= can('pos_terminal', 'write') ? '' : 'disabled' %>>
                </div>
                <div id="cust-info" class="col-span-2 hidden flex justify-between items-center text-xs bg-gray-50 p-2 rounded border border-gray-100">
                     <span class="text-gray-500">LTV: <b id="cust-ltv" class="text-gray-800">0</b></span>
                     <button onclick="showHistory()" class="text-red-600 font-bold hover:underline">View History</button>
                </div>
                <input type="hidden" id="cust-id">
            </div>

            <div class="px-4 py-2 bg-gray-50 border-b border-gray-200 flex text-xs font-bold text-gray-500 uppercase tracking-wider">
                <div class="w-16">Image</div>
                <div class="flex-1">Product / SKU</div>
                <div class="w-32 text-center">Qty</div>
                <div class="w-24 text-right">Total</div>
                <div class="w-10"></div>
            </div>

            <div class="flex-1 overflow-y-auto p-0 bg-white" id="cart-container">
                <div class="flex flex-col items-center justify-center h-full text-gray-300">
                    <span class="material-icons-outlined text-6xl mb-2">shopping_cart</span>
                    <p class="text-sm">Cart is Empty</p>
                </div>
            </div>

            <div class="p-4 bg-gray-50 border-t border-gray-200">
                <div class="flex justify-end gap-6 items-end">
                    <div class="text-right space-y-1">
                         <div class="text-gray-600 text-sm">Subtotal</div>
                         <div class="font-bold text-lg">TK. <span id="subtotal">0</span></div>
                    </div>
                    <div class="text-right space-y-1">
                        <div class="text-gray-600 text-sm">Discount</div>
                        <input type="number" id="discount-input" class="w-24 px-2 py-1 text-right border rounded text-sm focus:ring-red-500 outline-none font-bold" placeholder="0" oninput="updateTotals()">
                    </div>
                    <div class="text-right pl-6 border-l border-gray-300">
                        <div class="text-gray-600 text-sm uppercase font-bold">Total</div>
                        <div class="text-red-600 text-2xl font-black">TK. <span id="grand-total">0</span></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-[30%] flex flex-col h-full bg-gray-100 border-l border-gray-200">
            <div class="p-3 bg-white border-b border-gray-200">
                <div class="relative">
                    <span class="absolute left-3 top-2.5 text-gray-400 material-icons-outlined">search</span>
                    <input type="text" id="search-input" placeholder="Scan or Search..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 outline-none text-sm" autofocus oninput="handleSearch(this.value)">
                </div>
            </div>

            <div class="flex-1 overflow-y-auto p-3 space-y-3" id="product-grid">
                <% initialProducts.forEach(p => { %>
                    <div class="bg-white rounded-lg p-2 shadow-sm hover:shadow-md cursor-pointer border border-transparent hover:border-red-400 flex items-center group transition-all" 
                         onclick="openVariantModal(<%= p.id %>, '<%= p.name %>')">
                        <div class="h-14 w-14 flex-shrink-0 bg-gray-100 rounded overflow-hidden">
                            <img src="<%= p.image %>" class="w-full h-full object-cover">
                        </div>
                        <div class="ml-3 flex-1 min-w-0">
                            <h4 class="text-sm font-bold text-gray-800 truncate"><%= p.name %></h4>
                            <span class="text-xs text-blue-600 font-medium"><%= p.variant_count || 0 %> Variations</span>
                        </div>
                        <span class="material-icons-outlined text-gray-300">chevron_right</span>
                    </div>
                <% }) %>
            </div>

            <div class="p-4 bg-white border-t border-gray-200 shadow-[0_-5px_20px_rgba(0,0,0,0.05)] z-20">
                <% if (can('pos_terminal', 'write')) { %>
                <button onclick="openPaymentModal()" class="w-full bg-gray-900 text-white py-3 rounded-lg font-bold text-lg hover:bg-gray-800 shadow-lg transform active:scale-[0.98] transition-all flex items-center justify-center gap-2">
                    <span>PAY NOW</span>
                    <span class="material-icons-outlined">arrow_forward</span>
                </button>
                <% } else { %>
                <button disabled class="w-full bg-gray-300 text-gray-500 py-3 rounded-lg font-bold text-lg cursor-not-allowed flex items-center justify-center gap-2">
                    <span>PAY NOW (LOCKED)</span>
                    <span class="material-icons-outlined">lock</span>
                </button>
                <% } %>
            </div>
        </div>
    </div>
</div>

<div id="variant-modal" class="fixed inset-0 bg-black/60 z-[50] hidden flex items-center justify-center backdrop-blur-sm">
    <div class="bg-white rounded-xl w-full max-w-2xl max-h-[80vh] flex flex-col shadow-2xl">
        <div class="p-4 border-b flex justify-between items-center bg-gray-50 rounded-t-xl">
            <h3 class="font-bold text-lg text-gray-800" id="variant-modal-title">Select Variation</h3>
            <button onclick="closeModal('variant-modal')" class="text-gray-400 hover:text-red-500"><span class="material-icons-outlined">close</span></button>
        </div>
        <div class="flex-1 overflow-y-auto p-4 space-y-2" id="variant-list"></div>
    </div>
</div>

