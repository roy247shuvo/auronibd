<%- include('../partials/custom_alert') %>

<style>.method-btn.active { background-color: #1f2937; color: white; border-color: #1f2937; }</style>

<script>
    let currentWindow = 1;
    let orders = { 1: { items: [], customer: {}, discount: 0 }, 2: { items: [], customer: {}, discount: 0 } };
    let currentMethod = 'cash';

    function switchWindow(id) {
        currentWindow = id;
        document.querySelectorAll('button[id^="tab-"]').forEach(btn => {
            btn.classList.remove('bg-white', 'text-gray-800', 'shadow');
            btn.classList.add('text-gray-500', 'hover:bg-white/50');
        });
        const activeBtn = document.getElementById(`tab-${id}`);
        activeBtn.classList.remove('text-gray-500', 'hover:bg-white/50');
        activeBtn.classList.add('bg-white', 'text-gray-800', 'shadow');
        renderCart();
    }

    // FIXED: Search & Auto-Add Logic matching Fullscreen
    let searchTimeout;
    function handleSearch(val) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(async () => {
            if(!val) return;
            const res = await fetch(`/admin/pos/search?q=${encodeURIComponent(val.trim())}`);
            const data = await res.json();
            
            // ALWAYS render the grid, never auto-add blindly
            renderMainProductGrid(data);
            
        }, 200);
    }

    async function openVariantModal(productId, productName) {
        document.getElementById('variant-modal-title').innerText = productName;
        const list = document.getElementById('variant-list');
        list.innerHTML = '<div class="text-center p-4">Loading...</div>';
        document.getElementById('variant-modal').classList.remove('hidden');
        try {
            const res = await fetch(`/admin/pos/variants/${productId}`);
            const variants = await res.json();
            list.innerHTML = '';
            variants.forEach(v => {
                const isOutOfStock = v.stock_quantity <= 0;
                list.innerHTML += `
                    <div class="flex items-center p-2 border rounded hover:bg-gray-50 ${isOutOfStock ? 'opacity-50 grayscale' : ''}">
                        <img src="${v.image}" class="w-12 h-12 object-cover rounded bg-gray-100">
                        <div class="ml-3 flex-1">
                            <div class="font-bold text-sm text-gray-800">Size: ${v.size} | Color: ${v.color}</div>
                            <div class="text-xs text-gray-500">SKU: ${v.sku}</div>
                        </div>
                        <div class="text-right mr-4">
                            <div class="font-bold text-red-600">TK. ${v.selling_price}</div>
                            <div class="text-xs ${isOutOfStock ? 'text-red-500 font-bold' : 'text-green-600'}">Stock: ${v.stock_quantity}</div>
                        </div>
                        <button onclick='addToCart(${JSON.stringify(v)})' 
                                ${isOutOfStock ? 'disabled' : ''} 
                                <%= can('pos_terminal', 'write') ? '' : 'disabled style="opacity:0.5; cursor:not-allowed;"' %>
                                class="px-4 py-2 bg-gray-900 text-white text-xs font-bold rounded hover:bg-black disabled:bg-gray-300">ADD</button>
                    </div>`;
            });
        } catch(e) { console.error(e); }
    }

    async function addToCart(variant) {
        if(variant.stock_quantity <= 0) return alert('Out of Stock!');
        
        // 1. Reserve Stock on Server
        const res = await fetch('/admin/pos/hold-stock', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json', 'CSRF-Token': '<%= csrfToken %>' },
            body: JSON.stringify({ 
                product_id: variant.product_id, 
                variant_id: variant.variant_id, 
                quantity: 1 
            })
        });
        const data = await res.json();
        if (!data.success) return alert(data.message || 'Stock Reservation Failed');

        // 2. Update UI
        const state = orders[currentWindow];
        const existing = state.items.find(i => i.variant_id === variant.variant_id);
        if(existing) {
            existing.quantity++;
        } else {
            state.items.push({ 
                product_id: variant.product_id,
                variant_id: variant.variant_id,
                name: variant.name || variant.product_name, 
                sku: variant.sku,
                size: variant.size,
                color: variant.color,
                image: variant.image,
                price: variant.selling_price,
                quantity: 1,
                max_stock: variant.stock_quantity
            });
        }
        renderCart();
        closeModal('variant-modal');
    }

    function renderCart() {
        const state = orders[currentWindow];
        const container = document.getElementById('cart-container');
        document.getElementById('cust-phone').value = state.customer.phone || '';
        document.getElementById('cust-name-input').value = state.customer.full_name || ''; // FIXED: Use full_name
        document.getElementById('discount-input').value = state.discount > 0 ? state.discount : '';
        if(state.customer.phone) {
             document.getElementById('cust-info').classList.remove('hidden');
             document.getElementById('cust-ltv').innerText = state.customer.ltv || '0';
             document.getElementById('cust-id').value = state.customer.id || '';
        } else {
            document.getElementById('cust-info').classList.add('hidden');
        }
        container.innerHTML = '';
        if(state.items.length === 0) {
            container.innerHTML = `<div class="flex flex-col items-center justify-center h-full text-gray-300"><span class="material-icons-outlined text-6xl mb-2">shopping_cart</span><p class="text-sm">Cart is Empty</p></div>`;
        } else {
            state.items.forEach(item => {
                container.innerHTML += `
                    <div class="px-4 py-3 border-b border-gray-100 flex items-center hover:bg-gray-50 transition-colors">
                        <div class="w-16 h-16 bg-gray-100 rounded overflow-hidden flex-shrink-0"><img src="${item.image}" class="w-full h-full object-cover"></div>
                        <div class="flex-1 px-3">
                            <div class="text-sm font-bold text-gray-800 line-clamp-1">${item.name}</div>
                            <div class="text-xs text-gray-500 mt-1">SKU: ${item.sku}</div>
                            <div class="text-[10px] text-gray-400 mt-0.5">${item.color} / ${item.size}</div>
                        </div>
                        <div class="w-32 flex justify-center items-center gap-2">
                             <button onclick="updateQty(${item.variant_id}, -1)" class="w-6 h-6 flex items-center justify-center bg-gray-200 rounded text-gray-600 font-bold hover:bg-gray-300">-</button>
                             <span class="font-bold text-sm w-6 text-center">${item.quantity}</span>
                             <button onclick="updateQty(${item.variant_id}, 1)" class="w-6 h-6 flex items-center justify-center bg-gray-200 rounded text-gray-600 font-bold hover:bg-gray-300">+</button>
                        </div>
                        <div class="w-24 text-right font-bold text-gray-800 text-sm">${item.price * item.quantity}</div>
                        <div class="w-10 text-right"><button onclick="removeItem(${item.variant_id})" class="text-gray-300 hover:text-red-500"><span class="material-icons-outlined text-base">delete</span></button></div>
                    </div>`;
            });
        }
        updateTotals();
    }

    async function updateQty(variantId, change) {
        const state = orders[currentWindow];
        const item = state.items.find(i => i.variant_id === variantId);
        if(!item) return;

        if (change === -1 && item.quantity <= 1) {
            return removeItem(variantId);
        }

        // Call API
        const url = change === 1 ? '/admin/pos/hold-stock' : '/admin/pos/release-stock';
        const res = await fetch(url, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json', 'CSRF-Token': '<%= csrfToken %>' },
            body: JSON.stringify({ 
                product_id: item.product_id, 
                variant_id: item.variant_id, 
                quantity: 1 
            })
        });
        const data = await res.json();

        if (data.success) {
            item.quantity += change;
            renderCart();
        } else {
            alert('Stock update failed: ' + (data.message || 'Unknown error'));
        }
    }

    async function removeItem(variantId) {
        const state = orders[currentWindow];
        const item = state.items.find(i => i.variant_id === variantId);
        if (!item) return;

        // Release all held stock for this item
        await fetch('/admin/pos/release-stock', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json', 'CSRF-Token': '<%= csrfToken %>' },
            body: JSON.stringify({ 
                product_id: item.product_id, 
                variant_id: item.variant_id, 
                quantity: item.quantity 
            })
        });

        state.items = state.items.filter(i => i.variant_id !== variantId);
        renderCart();
    }

    function updateTotals() {
        const state = orders[currentWindow];
        let subtotal = 0;
        state.items.forEach(i => subtotal += (i.price * i.quantity));
        state.discount = parseFloat(document.getElementById('discount-input').value) || 0;
        const grandTotal = subtotal - state.discount;
        document.getElementById('subtotal').innerText = subtotal;
        document.getElementById('grand-total').innerText = grandTotal;
        document.getElementById('pay-total').innerText = grandTotal;
    }

    function updateCustName(val) { orders[currentWindow].customer.full_name = val; }

    function debounceCustomer(phone) {
        const state = orders[currentWindow];
        state.customer.phone = phone;
        if(phone.length === 11) {
            fetch(`/admin/pos/customer?phone=${phone}`)
                .then(r => r.json())
                .then(data => {
                    if(data.found) {
                        state.customer = { ...state.customer, ...data.customer, ltv: data.stats.total, id: data.customer.id };
                        document.getElementById('cust-name-input').value = state.customer.full_name || '';
                        renderCart();
                    } else {
                        state.customer.id = '';
                        state.customer.ltv = 0;
                        document.getElementById('cust-info').classList.add('hidden');
                    }
                });
        }
    }

    function renderMainProductGrid(products) {
        const grid = document.getElementById('product-grid');
        grid.innerHTML = products.map(p => {
            
            // CASE 1: Specific Variant Result (Direct Add)
            if (p.type === 'variant') {
                const isOutOfStock = p.stock_quantity <= 0;
                // Escape quotes for the JSON object
                const safeObj = JSON.stringify(p).replace(/'/g, "&#39;");

                return `
                <div class="bg-white rounded-lg p-2 shadow-sm hover:shadow-md cursor-pointer border-l-4 border-blue-500 hover:bg-blue-50 flex items-center group transition-all" 
                     onclick='addToCart(${safeObj})'>
                    
                    <div class="h-14 w-14 flex-shrink-0 bg-gray-100 rounded overflow-hidden relative">
                        <img src="${p.image || '/uploads/placeholder.jpg'}" class="w-full h-full object-cover">
                        ${isOutOfStock ? '<div class="absolute inset-0 bg-white/60 flex items-center justify-center text-[10px] font-bold text-red-600">OUT</div>' : ''}
                    </div>
                    
                    <div class="ml-3 flex-1 min-w-0">
                        <h4 class="text-sm font-bold text-gray-800 truncate">${p.name}</h4>
                        <div class="flex gap-2 text-xs text-gray-600 mt-0.5">
                            <span class="bg-gray-200 px-1 rounded font-bold">${p.size}</span>
                            <span>${p.color}</span>
                        </div>
                        <div class="text-[10px] text-gray-400 font-mono mt-0.5">${p.sku}</div>
                    </div>
                    
                    <div class="text-right">
                        <div class="font-bold text-sm text-blue-700">TK.${p.selling_price}</div>
                        <div class="text-[10px] font-bold ${isOutOfStock ? 'text-red-500' : 'text-green-600'}">
                            ${isOutOfStock ? 'Out' : p.stock_quantity + ' Left'}
                        </div>
                    </div>
                </div>`;
            } 
            
            // CASE 2: Main Product Result (Open Selection Modal)
            else {
                return `
                <div class="bg-white rounded-lg p-2 shadow-sm hover:shadow-md cursor-pointer border border-transparent hover:border-red-400 flex items-center group transition-all" 
                     onclick="openVariantModal(${p.id}, '${p.name.replace(/'/g, "\\'")}')">
                    <div class="h-14 w-14 flex-shrink-0 bg-gray-100 rounded overflow-hidden">
                        <img src="${p.image || '/uploads/placeholder.jpg'}" class="w-full h-full object-cover">
                    </div>
                    <div class="ml-3 flex-1 min-w-0">
                        <h4 class="text-sm font-bold text-gray-800 truncate">${p.name}</h4>
                        <span class="text-xs text-blue-600 font-medium">${p.variant_count || 0} Variations</span>
                    </div>
                    <span class="material-icons-outlined text-gray-300">chevron_right</span>
                </div>`;
            }
        }).join('');
    }

    function showHistory() {
        const id = document.getElementById('cust-id').value;
        const phone = document.getElementById('cust-phone').value;
        if(!id && !phone) return;
        document.getElementById('history-modal').classList.remove('hidden');
        const query = id ? `id=${id}` : `phone=${phone}`;
        fetch(`/admin/pos/customer-history?${query}`)
            .then(r => r.text())
            .then(html => document.getElementById('history-content').innerHTML = html);
    }

    async function viewOrderDetails(orderId, orderNo) {
        document.getElementById('detail-order-no').innerText = orderNo;
        document.getElementById('details-modal').classList.remove('hidden');
        const content = document.getElementById('detail-content');
        content.innerHTML = '<div class="text-center p-4">Loading...</div>';
        const res = await fetch(`/admin/pos/order-details/${orderId}`);
        const items = await res.json();
        content.innerHTML = items.map(i => `
            <div class="flex items-center p-2 border-b">
                <img src="${i.image}" class="w-10 h-10 object-cover rounded bg-gray-100">
                <div class="ml-3 flex-1">
                    <div class="text-sm font-bold">${i.product_name}</div>
                    <div class="text-xs text-gray-500">${i.color} | ${i.size}</div>
                </div>
                <div class="text-right text-sm">
                    <div>${i.quantity} x ${i.price}</div>
                    <div class="font-bold">${i.line_total}</div>
                </div>
            </div>
        `).join('');
    }

    function closeModal(id) { document.getElementById(id).classList.add('hidden'); }
    function openPaymentModal() {
        // 1. Check Cart
        if(orders[currentWindow].items.length === 0) return alert("Cart is Empty");

        // 2. Check Phone Number (Required)
        const phoneInput = document.getElementById('cust-phone').value.trim();
        if (!phoneInput) {
            // Focus on the phone input so they can type immediately
            document.getElementById('cust-phone').focus();
            return alert("❌ Customer Phone Number is Required!");
        }
        
        // Update state in case debounce didn't catch it
        orders[currentWindow].customer.phone = phoneInput;

        // 3. Open Modal
        document.getElementById('payment-modal').classList.remove('hidden');
        setMethod('cash');
    }
    function setMethod(method) {
        currentMethod = method;
        document.querySelectorAll('.method-btn').forEach(b => {
            b.classList.remove('active');
            if(b.dataset.method === method) b.classList.add('active');
        });

        // Hide all inputs first
        document.querySelectorAll('.pay-section').forEach(d => d.classList.add('hidden'));
        
        if(method === 'cash') {
            document.getElementById('input-cash').classList.remove('hidden');
        } else if(method === 'bank') {
            document.getElementById('input-bank').classList.remove('hidden');
        } else if(method === 'mfs') {
            document.getElementById('input-mfs').classList.remove('hidden');
        } else if(method === 'card') {
            // NEW: Show Card specific section (Bank Selector + TRX)
            document.getElementById('input-card').classList.remove('hidden');
        } else {
            document.getElementById('input-trx').classList.remove('hidden');
        }
    }
    function calcChange() {
        const total = parseFloat(document.getElementById('pay-total').innerText);
        const given = parseFloat(document.getElementById('amount-received').value) || 0;
        document.getElementById('change-display').innerText = Math.max(0, given - total);
    }

    async function submitOrder() {
        const state = orders[currentWindow];
        
        // --- NEW: VALIDATION ---
        const phoneVal = state.customer.phone || document.getElementById('cust-phone').value;
        if (!phoneVal || phoneVal.trim() === '') {
            return alert("❌ Customer Phone Number is Required!");
        }
        // -----------------------

        const payload = {
            customer_phone: phoneVal,
            customer_name: state.customer.full_name || document.getElementById('cust-name-input').value,
            // ...
            items: JSON.stringify(state.items),
            discount: state.discount,
            payment_method: currentMethod,
            amount_received: document.getElementById('amount-received').value,
            
            // UPDATED LOGIC: Handles Card TRX specific input
            trx_id: (currentMethod === 'bank') ? document.getElementById('bank-ref').value : 
                    (currentMethod === 'mfs')  ? document.getElementById('mfs-trx').value : 
                    (currentMethod === 'card') ? document.getElementById('card-trx').value :
                    document.getElementById('trx-id').value,
            
            // UPDATED LOGIC: Handles Card Bank ID
            bank_id: (currentMethod === 'bank') ? document.getElementById('bank-id').value :
                     (currentMethod === 'mfs')  ? document.getElementById('mfs-id').value : 
                     (currentMethod === 'card') ? document.getElementById('card-bank-id').value : null
        };
        const res = await fetch('/admin/pos/submit', { method: 'POST', headers: {'Content-Type': 'application/json', 'CSRF-Token': '<%= csrfToken %>'}, body: JSON.stringify(payload) });
        const data = await res.json();
        if(data.success) {
            // 1. Reset Cart & Close Payment Modal
            orders[currentWindow] = { items: [], customer: {}, discount: 0 };
            closeModal('payment-modal');
            renderCart();

            // 2. Open Receipt Modal
            showReceiptModal(data.order_id);
        } else {
            alert(data.message);
        }
    }

    // --- NEW: Receipt Functions ---
    function showReceiptModal(orderId) {
        const modal = document.getElementById('receipt-modal');
        const frame = document.getElementById('receipt-frame');
        const loading = document.getElementById('receipt-loading');
        
        modal.classList.remove('hidden');
        loading.classList.remove('hidden'); // Show loader
        
        // Load Receipt
        frame.src = `/admin/pos/receipt/${orderId}`;
        
        // Hide loader when done
        frame.onload = () => {
            loading.classList.add('hidden');
        };
    }

    function printReceipt() {
        const frame = document.getElementById('receipt-frame');
        if (frame.contentWindow) {
            frame.contentWindow.focus();
            frame.contentWindow.print();
        }
    }

    // Release stock on page close/refresh
    window.addEventListener('beforeunload', function (e) {
        const blob = new Blob([JSON.stringify({ _csrf: '<%= csrfToken %>' })], { type: 'application/json' });
        navigator.sendBeacon('/admin/pos/clear-holds', blob);
    });
</script>