    <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg overflow-hidden">
        <div class="bg-gray-900 text-white p-4 flex justify-between items-center">
            <h3 class="font-bold text-lg">Complete Order</h3>
            <button onclick="closeModal('payment-modal')" class="hover:text-red-400"><span class="material-icons-outlined">close</span></button>
        </div>
        <div class="p-6">
            <div class="text-center mb-6">
                <span class="text-gray-500 text-xs uppercase font-bold">Total Payable</span>
                <div class="text-4xl font-black text-gray-800">TK. <span id="pay-total">0</span></div>
            </div>
            <div class="grid grid-cols-4 gap-2 mb-6">
                <button onclick="setMethod('cash')" class="method-btn active p-2 border rounded-lg bg-gray-50 hover:bg-gray-100 flex flex-col items-center gap-1" data-method="cash"><span class="material-icons-outlined">payments</span><span class="text-[10px] font-bold">CASH</span></button>
                <button onclick="setMethod('card')" class="method-btn p-2 border rounded-lg bg-gray-50 hover:bg-gray-100 flex flex-col items-center gap-1" data-method="card"><span class="material-icons-outlined">credit_card</span><span class="text-[10px] font-bold">CARD</span></button>
                <button onclick="setMethod('mfs')" class="method-btn p-3 border-2 border-transparent rounded-xl flex flex-col items-center gap-1 hover:bg-gray-50 transition-all bg-gray-100" data-method="mfs"><span class="material-icons-outlined text-pink-600 text-2xl">smartphone</span><span class="text-xs font-bold mt-0.5">MFS</span></button>
                <button onclick="setMethod('bank')" class="method-btn p-2 border rounded-lg bg-gray-50 hover:bg-gray-100 flex flex-col items-center gap-1" data-method="bank"><span class="material-icons-outlined text-blue-600">account_balance</span><span class="text-[10px] font-bold">BANK</span></button>
            </div>
            <div id="input-cash" class="pay-section">
                <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Cash Received</label>
                <input type="number" id="amount-received" class="w-full p-3 border-2 border-gray-200 rounded-lg text-xl font-bold focus:border-gray-800 outline-none" placeholder="0" oninput="calcChange()">
                <div class="mt-3 text-right font-bold text-green-600 text-lg">Change: TK. <span id="change-display">0</span></div>
