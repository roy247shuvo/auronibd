<header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-4 md:px-6 shadow-sm sticky top-0 z-10">
    
    <div class="flex items-center flex-1 gap-3 max-w-lg">
        
        <button onclick="toggleMobileMenu()" class="md:hidden p-2 text-gray-600 hover:bg-gray-100 rounded-lg focus:outline-none">
            <span class="material-icons-outlined text-2xl">menu</span>
        </button>

        <div class="relative flex-1">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="material-icons-outlined text-gray-400">search</span>
            </span>
            <input type="text" class="w-full bg-gray-100 border-none rounded-md py-2 pl-10 pr-4 focus:ring-2 focus:ring-green-500 focus:bg-white transition" placeholder="Search orders, products...">
        </div>
    </div>

    <div class="flex items-center space-x-4">
        <button class="p-2 rounded-full text-gray-500 hover:text-gray-700 hover:bg-gray-100 relative transition">
            <span class="material-icons-outlined">notifications</span>
            <span class="absolute top-1.5 right-1.5 block h-2 w-2 rounded-full bg-red-500 ring-2 ring-white"></span>
        </button>
        
        <div class="relative" id="profileDropdown">
            <button onclick="toggleProfileMenu()" class="flex items-center space-x-2 cursor-pointer focus:outline-none">
                <div class="h-8 w-8 rounded-full bg-purple-600 text-white flex items-center justify-center font-bold text-sm shadow-sm hover:bg-purple-700 transition">
                    <%= user && user.username ? user.username.charAt(0).toUpperCase() : 'U' %>
                </div>
                <div class="text-left hidden sm:block">
                    <p class="text-sm font-bold text-gray-700 leading-tight">
                        Hello, <%= user ? user.username : 'User' %>
                    </p>
                    <p class="text-xs text-gray-500 font-medium uppercase"><%= user && user.role ? user.role : 'Staff' %></p>
                </div>
                <span class="material-icons-outlined text-gray-400 text-sm">expand_more</span>
            </button>

            <div id="profileMenuContent" class="hidden absolute right-0 mt-3 w-56 bg-white rounded-lg shadow-xl border border-gray-100 py-2 z-50 transform origin-top-right transition-all">
                
                <div class="px-4 py-3 border-b border-gray-100 bg-gray-50">
                    <p class="text-xs text-gray-500">Signed in as</p>
                    <p class="text-sm font-bold text-gray-900 truncate"><%= user ? user.username : 'User' %></p>
                </div>

                <button onclick="openPasswordModal()" class="w-full text-left block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50 hover:text-purple-700 transition flex items-center gap-2">
                    <span class="material-icons-outlined text-[18px]">lock</span>
                    Change Password
                </button>

                <div class="border-t border-gray-100 my-1"></div>

                <a href="/logout" class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50 hover:text-red-700 transition flex items-center gap-2">
                    <span class="material-icons-outlined text-[18px]">logout</span>
                    Logout
                </a>
            </div>
        </div>
    </div>
</header>

<div id="passwordModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 hidden z-50 flex items-center justify-center backdrop-blur-sm transition-opacity">
    <div class="bg-white rounded-lg shadow-2xl w-full max-w-md mx-4 transform scale-100 transition-transform">
        
        <div class="flex justify-between items-center px-6 py-4 border-b border-gray-100 bg-gray-50 rounded-t-lg">
            <h3 class="text-lg font-bold text-gray-800">Change Password</h3>
            <button onclick="closePasswordModal()" class="text-gray-400 hover:text-gray-600 focus:outline-none">
                <span class="material-icons-outlined">close</span>
            </button>
        </div>

        <div class="p-6">
            <form id="changePasswordForm" onsubmit="submitChangePassword(event)">
                
                <div class="mb-4">
                    <label class="block text-xs font-bold text-gray-600 uppercase mb-1">Current Password</label>
                    <input type="password" id="currentPass" name="currentPassword" required 
                           class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition"
                           placeholder="••••••••">
                </div>

                <div class="mb-4 relative">
                    <label class="block text-xs font-bold text-gray-600 uppercase mb-1">New Password</label>
                    <input type="password" id="newPass" name="newPassword" required oninput="checkPasswordStrength()"
                           class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition"
                           placeholder="New secure password">
                    
                    <div class="mt-2 h-1 w-full bg-gray-200 rounded-full overflow-hidden">
                        <div id="strengthBar" class="h-full w-0 bg-red-500 transition-all duration-300"></div>
                    </div>
                    <p id="strengthText" class="text-xs mt-1 text-gray-500 text-right">Enter password</p>
                </div>

                <div id="passwordFeedback" class="mb-4 hidden p-3 rounded-lg text-sm"></div>

                <div class="flex justify-end gap-2 pt-2">
                    <button type="button" onclick="closePasswordModal()" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 font-medium transition">Cancel</button>
                    <button type="submit" id="savePassBtn" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-bold shadow-md transition disabled:opacity-50 disabled:cursor-not-allowed">
                        Update Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // --- Dropdown Logic ---
    function toggleProfileMenu() {
        document.getElementById('profileMenuContent').classList.toggle('hidden');
    }
    
    // Close dropdown on outside click
    window.addEventListener('click', function(e) {
        const dropdown = document.getElementById('profileDropdown');
        if (dropdown && !dropdown.contains(e.target)) {
            document.getElementById('profileMenuContent').classList.add('hidden');
        }
    });

    // --- Modal Logic ---
    const modal = document.getElementById('passwordModal');
    const feedback = document.getElementById('passwordFeedback');
    const btn = document.getElementById('savePassBtn');

    function openPasswordModal() {
        modal.classList.remove('hidden');
        document.getElementById('profileMenuContent').classList.add('hidden'); // Close dropdown
        feedback.classList.add('hidden');
        document.getElementById('changePasswordForm').reset();
        checkPasswordStrength(); // Reset meter
    }

    function closePasswordModal() {
        modal.classList.add('hidden');
    }

    // --- Password Strength Meter ---
    function checkPasswordStrength() {
        const password = document.getElementById('newPass').value;
        const bar = document.getElementById('strengthBar');
        const text = document.getElementById('strengthText');
        const saveBtn = document.getElementById('savePassBtn');

        let strength = 0;
        if (password.length >= 8) strength += 1;
        if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength += 1;
        if (password.match(/\d/)) strength += 1;
        if (password.match(/[^a-zA-Z\d]/)) strength += 1;

        if (password.length === 0) {
            bar.style.width = '0%';
            bar.className = 'h-full w-0 transition-all';
            text.textContent = 'Enter password';
            text.className = 'text-xs mt-1 text-gray-500 text-right';
            saveBtn.disabled = true;
            return;
        }

        if (password.length < 6) {
            bar.style.width = '20%';
            bar.className = 'h-full bg-red-500 transition-all';
            text.textContent = 'Too Short';
            text.className = 'text-xs mt-1 text-red-500 text-right font-bold';
            saveBtn.disabled = true;
        } else if (strength < 2) {
            bar.style.width = '40%';
            bar.className = 'h-full bg-orange-400 transition-all';
            text.textContent = 'Weak';
            text.className = 'text-xs mt-1 text-orange-500 text-right font-bold';
            saveBtn.disabled = false;
        } else if (strength < 4) {
            bar.style.width = '75%';
            bar.className = 'h-full bg-yellow-400 transition-all';
            text.textContent = 'Good';
            text.className = 'text-xs mt-1 text-yellow-600 text-right font-bold';
            saveBtn.disabled = false;
        } else {
            bar.style.width = '100%';
            bar.className = 'h-full bg-green-500 transition-all';
            text.textContent = 'Strong';
            text.className = 'text-xs mt-1 text-green-600 text-right font-bold';
            saveBtn.disabled = false;
        }
    }

    // --- AJAX Submission ---
    async function submitChangePassword(e) {
        e.preventDefault();
        const currentPassword = document.getElementById('currentPass').value;
        const newPassword = document.getElementById('newPass').value;

        // Basic Front-end validation
        if (newPassword.length < 6) {
            showFeedback('Password is too short', 'error');
            return;
        }

        btn.disabled = true;
        btn.textContent = 'Updating...';

        try {
            const response = await fetch('/admin/change-password-api', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    // Include CSRF if your app uses it
                    'CSRF-Token': '<%= typeof csrfToken !== "undefined" ? csrfToken : "" %>' 
                },
                body: JSON.stringify({ currentPassword, newPassword })
            });

            const data = await response.json();

            if (data.success) {
                showFeedback(data.message, 'success');
                setTimeout(() => {
                    closePasswordModal();
                    btn.disabled = false;
                    btn.textContent = 'Update Password';
                }, 1500);
            } else {
                showFeedback(data.message, 'error');
                btn.disabled = false;
                btn.textContent = 'Update Password';
            }

        } catch (err) {
            console.error(err);
            showFeedback('Something went wrong. Try again.', 'error');
            btn.disabled = false;
            btn.textContent = 'Update Password';
        }
    }

    function showFeedback(msg, type) {
        feedback.classList.remove('hidden');
        feedback.textContent = msg;
        if (type === 'success') {
            feedback.className = 'mb-4 p-3 rounded-lg text-sm bg-green-100 text-green-700 border border-green-200';
        } else {
            feedback.className = 'mb-4 p-3 rounded-lg text-sm bg-red-100 text-red-700 border border-red-200';
        }
    }
</script>