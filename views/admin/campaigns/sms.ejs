<div class="p-6" x-data="{ tab: 'send', balance: '---', loading: false, checkBalance() {
    this.loading = true;
    fetch('/admin/campaigns/sms/balance')
        .then(r => r.json())
        .then(d => {
            if(d.balance) this.balance = 'à§³ ' + d.balance;
            else this.balance = 'Error';
            this.loading = false;
        })
        .catch(() => { this.balance = 'Error'; this.loading = false; });
} }" x-init="checkBalance()">

    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">SMS Manager</h1>
        
        <div class="bg-white border border-blue-200 text-blue-800 px-4 py-2 rounded-lg shadow-sm flex items-center gap-3">
            <div class="text-right">
                <p class="text-[10px] uppercase font-bold text-blue-400">Current Balance</p>
                <p class="text-xl font-mono font-bold" x-text="balance"></p>
            </div>
            <button @click="checkBalance()" class="bg-blue-50 hover:bg-blue-100 p-2 rounded-full transition" title="Refresh Balance">
                <span class="material-icons-outlined text-blue-600" :class="{'animate-spin': loading}">refresh</span>
            </button>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="flex border-b border-gray-100">
            <button @click="tab = 'send'" :class="{'border-b-2 border-black text-black bg-gray-50': tab === 'send'}" class="px-6 py-4 text-sm font-bold uppercase tracking-wider text-gray-500 hover:text-black transition">
                Send SMS
            </button>
            <button @click="tab = 'settings'" :class="{'border-b-2 border-black text-black bg-gray-50': tab === 'settings'}" class="px-6 py-4 text-sm font-bold uppercase tracking-wider text-gray-500 hover:text-black transition">
                Settings
            </button>
            <button @click="tab = 'credentials'" :class="{'border-b-2 border-black text-black bg-gray-50': tab === 'credentials'}" class="px-6 py-4 text-sm font-bold uppercase tracking-wider text-gray-500 hover:text-black transition">
                Credentials
            </button>
        </div>

        <div class="p-6">
            
            <div x-show="tab === 'send'">
                <form action="/admin/campaigns/sms/send" method="POST" class="grid grid-cols-1 gap-8" x-data="{ recipientType: 'manual', charCount: 0, msg: '', search: '' }">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    
                    <div class="max-w-4xl">
                        <div class="flex gap-4 mb-6">
                            <label class="flex items-center gap-2 cursor-pointer bg-gray-50 px-4 py-2 rounded-lg border border-gray-200 hover:bg-gray-100 transition">
                                <input type="radio" name="recipient_type" value="manual" x-model="recipientType" class="text-black focus:ring-black">
                                <span class="text-sm font-bold text-gray-700">Manual Numbers</span>
                            </label>
                            <label class="flex items-center gap-2 cursor-pointer bg-gray-50 px-4 py-2 rounded-lg border border-gray-200 hover:bg-gray-100 transition">
                                <input type="radio" name="recipient_type" value="customers" x-model="recipientType" class="text-black focus:ring-black">
                                <span class="text-sm font-bold text-gray-700">Select Customers</span>
                            </label>
                        </div>

                        <div class="space-y-6">
                            
                            <div x-show="recipientType === 'manual'">
                                <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Recipients (Mobile Numbers)</label>
                                <textarea name="manual_numbers" rows="4" placeholder="017xxxxxxxx, 018xxxxxxxx" class="w-full border border-gray-300 rounded-lg p-3 text-sm focus:ring-2 focus:ring-black outline-none font-mono"></textarea>
                                <p class="text-[10px] text-gray-400 mt-1">Separate multiple numbers with commas.</p>
                            </div>

                            <div x-show="recipientType === 'customers'" style="display: none;">
                                <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Select Customers</label>
                                
                                <div class="relative mb-3">
                                    <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                                        <span class="material-icons-outlined text-gray-400">search</span>
                                    </span>
                                    <input type="text" x-model="search" placeholder="Search by name or 017..." class="w-full border border-gray-300 rounded-lg pl-10 pr-4 py-2 text-sm focus:ring-2 focus:ring-black outline-none">
                                </div>

                                <div class="border border-gray-300 rounded-lg max-h-[300px] overflow-y-auto p-2 bg-gray-50">
                                    <% if(typeof customers !== 'undefined' && customers.length > 0) { %>
                                        <% customers.forEach(c => { %>
                                            <label class="flex items-center gap-3 p-2 hover:bg-white rounded cursor-pointer transition border-b border-gray-100 last:border-0" 
                                                   x-show="!search || '<%= c.full_name %>'.toLowerCase().includes(search.toLowerCase()) || '<%= c.phone %>'.includes(search)">
                                                <input type="checkbox" name="selected_customers" value="<%= c.id %>" class="rounded text-black focus:ring-black w-4 h-4">
                                                <div>
                                                    <p class="text-sm font-bold text-gray-800"><%= c.full_name %></p>
                                                    <p class="text-xs text-gray-500 font-mono"><%= c.phone %></p>
                                                </div>
                                            </label>
                                        <% }) %>
                                    <% } else { %>
                                        <p class="text-xs text-gray-400 p-4 text-center">No customers found.</p>
                                    <% } %>
                                </div>
                                <p class="text-[10px] text-gray-400 mt-2">Only customers with valid phone numbers are listed.</p>
                            </div>

                            <div>
                                <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Message Body</label>
                                <textarea name="message" x-model="msg" @input="charCount = msg.length" rows="4" maxlength="160" required placeholder="Type your message here..." class="w-full border border-gray-300 rounded-lg p-3 text-sm focus:ring-2 focus:ring-black outline-none"></textarea>
                                <div class="flex justify-between mt-1">
                                    <p class="text-[10px] text-gray-400">160 Characters = 1 SMS (Bangla/English)</p>
                                    <p class="text-[10px] font-bold text-gray-600"><span x-text="charCount">0</span> / 160</p>
                                </div>
                            </div>

                            <button type="submit" class="bg-black text-white px-8 py-4 rounded-lg font-bold uppercase tracking-widest text-xs hover:bg-gray-800 transition shadow-lg w-full md:w-auto flex items-center justify-center gap-2">
                                <span class="material-icons-outlined text-sm">send</span>
                                Send Campaign
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div x-show="tab === 'settings'" style="display: none;">
                <form action="/admin/campaigns/sms/save" method="POST" class="max-w-xl">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    
                    <input type="hidden" name="sms_api_key" value="<%= sms.sms_api_key %>">
                    <input type="hidden" name="sms_sender_id" value="<%= sms.sms_sender_id %>">

                    <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg border border-gray-200 mb-6">
                        <div>
                            <h3 class="font-bold text-gray-800">Order Confirmation SMS</h3>
                            <p class="text-xs text-gray-500 mt-1">Automatically send an SMS when an order is placed.</p>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" name="sms_confirmation_enabled" value="yes" class="sr-only peer" <%= sms.sms_confirmation_enabled === 'yes' ? 'checked' : '' %>>
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-600"></div>
                        </label>
                    </div>

                    <button type="submit" class="bg-black text-white px-6 py-3 rounded-lg font-bold uppercase tracking-widest text-xs hover:bg-gray-800 transition">
                        Save Settings
                    </button>
                </form>
            </div>

            <div x-show="tab === 'credentials'" style="display: none;">
                <form action="/admin/campaigns/sms/save" method="POST" class="max-w-xl space-y-5">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    
                    <input type="hidden" name="sms_confirmation_enabled" value="<%= sms.sms_confirmation_enabled %>">

                    <div>
                        <label class="block text-xs font-bold text-gray-700 uppercase mb-1">Bulk SMS BD API Key</label>
                        <input type="password" name="sms_api_key" value="<%= sms.sms_api_key %>" placeholder="Enter your API Key" class="w-full border border-gray-300 rounded-lg p-3 text-sm focus:ring-2 focus:ring-black outline-none">
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-gray-700 uppercase mb-1">Sender ID</label>
                        <input type="text" name="sms_sender_id" value="<%= sms.sms_sender_id %>" placeholder="8809617625167" class="w-full border border-gray-300 rounded-lg p-3 text-sm focus:ring-2 focus:ring-black outline-none font-mono">
                        <p class="text-[10px] text-gray-400 mt-1">Default: 8809617625167 (Approved Sender ID)</p>
                    </div>

                    <div class="bg-gray-50 p-4 rounded text-xs text-gray-500 border border-gray-100">
                        <p class="mb-1"><strong>Provider:</strong> Bulk SMS BD (bulksmsbd.net)</p>
                        <p>Ensure your account status is active and you have sufficient balance.</p>
                    </div>

                    <button type="submit" class="bg-black text-white px-6 py-3 rounded-lg font-bold uppercase tracking-widest text-xs hover:bg-gray-800 transition">
                        Save Credentials
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>