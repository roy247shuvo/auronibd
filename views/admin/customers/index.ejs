<div class="p-6">
    <% if (!can('cust_list', 'write')) { %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6 rounded-r shadow-sm">
        <div class="flex">
            <div class="flex-shrink-0">
                <span class="material-icons-outlined text-yellow-400">lock</span>
            </div>
            <div class="ml-3">
                <p class="text-sm text-yellow-700">
                    <span class="font-bold">View Only Mode:</span> You do not have permission to manage customer data.
                </p>
            </div>
        </div>
    </div>
    <% } %>

    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
                <span class="material-icons-outlined text-gray-400">groups</span>
                Customers
            </h1>
            <p class="text-xs text-gray-500 mt-1">Manage your customer base and view their lifetime value.</p>
        </div>
        
        <form action="/admin/customers" method="GET" class="relative group w-full md:w-auto">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-black transition-colors material-icons-outlined text-lg">search</span>
            <input type="text" name="q" value="<%= searchTerm %>" placeholder="Search name or phone..." 
                   class="pl-10 pr-4 py-2.5 w-full md:w-80 bg-white border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-black/5 focus:border-black transition-all shadow-sm">
            <% if(searchTerm) { %>
                <a href="/admin/customers" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-red-500">
                    <span class="material-icons-outlined text-lg">close</span>
                </a>
            <% } %>
        </form>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-left">
                <thead class="text-xs text-gray-500 uppercase bg-gray-50/80 border-b border-gray-100">
                    <tr>
                        <th class="px-6 py-4 font-bold tracking-wider">Customer Info</th>
                        <th class="px-6 py-4 font-bold tracking-wider text-center">Status</th>
                        <th class="px-6 py-4 font-bold tracking-wider text-center">Orders</th>
                        <th class="px-6 py-4 font-bold tracking-wider text-right">Lifetime Value</th>
                        <th class="px-6 py-4 text-right">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    <% customers.forEach(c => { 
                        // Level Calculation Logic
                        const ltv = c.total_ltv || 0;
                        let levelBadge = '';
                        
                        if (ltv >= 100000) {
                            levelBadge = '<span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide bg-gradient-to-r from-gray-900 to-black text-white border border-gray-700 shadow-sm"><span class="material-icons-outlined text-[10px]">diamond</span> VIP</span>';
                        } else if (ltv >= 50000) {
                            levelBadge = '<span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide bg-gradient-to-r from-slate-100 to-white text-slate-600 border border-slate-300 shadow-sm"><span class="material-icons-outlined text-[10px]">workspace_premium</span> Platinum</span>';
                        } else if (ltv >= 20000) {
                            levelBadge = '<span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide bg-gradient-to-r from-yellow-100 to-yellow-50 text-yellow-700 border border-yellow-200 shadow-sm"><span class="material-icons-outlined text-[10px]">stars</span> Gold</span>';
                        } else if (ltv >= 5000) {
                            levelBadge = '<span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide bg-gradient-to-r from-gray-100 to-gray-50 text-gray-600 border border-gray-200"><span class="material-icons-outlined text-[10px]">verified</span> Silver</span>';
                        } else {
                            levelBadge = '<span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide bg-orange-50 text-orange-800 border border-orange-100">Bronze</span>';
                        }
                    %>
                    <tr class="group hover:bg-gray-50/80 transition-colors duration-200">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center text-gray-500 font-bold text-xs shadow-inner">
                                    <%= c.full_name.charAt(0).toUpperCase() %>
                                </div>
                                <div>
                                    <p class="font-bold text-gray-900 group-hover:text-blue-600 transition-colors"><%= c.full_name %></p>
                                    <p class="font-mono text-xs text-gray-400 flex items-center gap-1">
                                        <span class="material-icons-outlined text-[10px]">smartphone</span>
                                        <%= c.phone %>
                                    </p>
                                </div>
                            </div>
                        </td>

                        <td class="px-6 py-4 text-center">
                            <%- levelBadge %>
                        </td>

                        <td class="px-6 py-4 text-center">
                            <span class="inline-block bg-white border border-gray-200 text-gray-600 text-xs font-bold px-2 py-1 rounded shadow-sm group-hover:border-blue-200 group-hover:text-blue-600 transition-colors">
                                <%= c.total_orders %> Orders
                            </span>
                        </td>

                        <td class="px-6 py-4 text-right">
                            <span class="font-mono font-bold text-gray-900 text-sm">Tk. <%= ltv.toLocaleString() %></span>
                        </td>

                        <td class="px-6 py-4 text-right">
                            <a href="/admin/customers/view/<%= c.id %>" 
                               class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-white border border-gray-200 text-gray-400 hover:text-blue-600 hover:border-blue-200 hover:shadow-md transition-all duration-300 transform hover:scale-110"
                               title="View Details">
                                <span class="material-icons-outlined text-lg">visibility</span>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        
        <% if (totalPages > 1) { %>
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 flex justify-center gap-2">
            <% for(let i=1; i<=totalPages; i++) { %>
                <a href="/admin/customers?page=<%= i %>&q=<%= searchTerm %>" 
                   class="w-8 h-8 flex items-center justify-center rounded-lg text-xs font-bold transition-all
                   <%= currentPage === i ? 'bg-black text-white shadow-lg scale-110' : 'bg-white text-gray-500 hover:bg-gray-100 border border-gray-200' %>">
                   <%= i %>
                </a>
            <% } %>
        </div>
        <% } %>
    </div>
</div>