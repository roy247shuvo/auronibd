<div class="p-6 max-w-7xl mx-auto" x-data="{ editMode: false, modalOpen: false, modalOrder: null, modalItems: [] }">
    
    <% if (!can('cust_list', 'write')) { %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6 rounded-r shadow-sm">
        <div class="flex">
            <div class="flex-shrink-0">
                <span class="material-icons-outlined text-yellow-400">lock</span>
            </div>
            <div class="ml-3">
                <p class="text-sm text-yellow-700">
                    <span class="font-bold">View Only Mode:</span> You do not have permission to edit customer details.
                </p>
            </div>
        </div>
    </div>
    <% } %>

    <div class="mb-6">
        <a href="/admin/customers" class="inline-flex items-center gap-2 bg-white hover:bg-gray-50 text-gray-600 px-4 py-2 rounded-full text-xs font-bold uppercase tracking-wide transition-all shadow-sm border border-gray-200">
            <span class="material-icons-outlined text-base">arrow_back</span>
            Back to List
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
        
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 col-span-1 h-full">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-lg font-bold font-serif italic">Customer Profile</h2>
                <% if (can('cust_list', 'write')) { %>
                <button @click="editMode = !editMode" class="text-xs font-bold uppercase tracking-widest text-gray-400 hover:text-black transition-colors" x-text="editMode ? 'CANCEL' : 'EDIT'"></button>
                <% } %>
            </div>

            <div x-show="!editMode" class="relative">
                <div class="space-y-5">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 rounded-full bg-gray-50 flex items-center justify-center text-gray-400">
                            <span class="material-icons-outlined">person</span>
                        </div>
                        <div>
                            <label class="text-[10px] text-gray-400 uppercase font-bold tracking-wider">Full Name</label>
                            <p class="font-medium text-gray-900 text-lg leading-tight"><%= customer.full_name %></p>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 rounded-full bg-gray-50 flex items-center justify-center text-gray-400">
                            <span class="material-icons-outlined">phone</span>
                        </div>
                        <div>
                            <label class="text-[10px] text-gray-400 uppercase font-bold tracking-wider">Phone</label>
                            <p class="font-mono text-gray-900 text-lg leading-tight"><%= customer.phone %></p>
                        </div>
                    </div>

                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 rounded-full bg-gray-50 flex items-center justify-center text-gray-400">
                            <span class="material-icons-outlined">place</span>
                        </div>
                        <div>
                            <label class="text-[10px] text-gray-400 uppercase font-bold tracking-wider">Address</label>
                            <p class="text-gray-600 text-sm leading-tight"><%= customer.address || 'No address set' %></p>
                        </div>
                    </div>
                </div>
            </div>

            <% if (can('cust_list', 'write')) { %>
            <form x-show="editMode" action="/admin/customers/update" method="POST" class="space-y-4">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"> <input type="hidden" name="id" value="<%= customer.id %>">
                <div>
                    <label class="block text-xs font-bold text-gray-700 mb-1">Full Name</label>
                    <input type="text" name="full_name" value="<%= customer.full_name %>" class="w-full bg-gray-50 border border-gray-200 rounded-lg px-3 py-2 text-sm focus:ring-1 focus:ring-black outline-none transition">
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-700 mb-1">Phone Number</label>
                    <input type="text" name="phone" value="<%= customer.phone %>" class="w-full bg-gray-50 border border-gray-200 rounded-lg px-3 py-2 text-sm font-mono focus:ring-1 focus:ring-black outline-none transition">
                    <p class="text-[10px] text-orange-600 mt-1 flex items-center gap-1">
                        <span class="material-icons-outlined text-[10px]">info</span>
                        Updates for tracking on all past orders.
                    </p>
                </div>
                <button type="submit" class="w-full bg-black text-white py-3 rounded-lg text-xs font-bold uppercase tracking-widest hover:bg-gray-800 transition shadow-lg mt-2">Save Changes</button>
            </form>
            <% } %>
        </div>

        <% 
            let level = 'Bronze';
            let cardClass = 'bg-gradient-to-br from-orange-100 via-orange-50 to-orange-200 text-orange-900 border-orange-200'; 
            let icon = 'military_tech';
            const total = stats.total_ltv || 0;
            
            // Level Logic
            if (total >= 100000) {
                level = 'VIP';
                cardClass = 'bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white border-gray-700 ring-2 ring-yellow-500/50';
                icon = 'diamond';
            } else if (total >= 50000) {
                level = 'Platinum';
                cardClass = 'bg-gradient-to-br from-slate-200 via-white to-slate-300 text-slate-800 border-slate-300 shadow-slate-200';
                icon = 'workspace_premium';
            } else if (total >= 20000) {
                level = 'Gold';
                cardClass = 'bg-gradient-to-br from-yellow-200 via-yellow-100 to-yellow-400 text-yellow-900 border-yellow-300 shadow-yellow-200';
                icon = 'stars';
            } else if (total >= 5000) {
                level = 'Silver';
                cardClass = 'bg-gradient-to-br from-gray-100 via-white to-gray-300 text-gray-700 border-gray-200 shadow-gray-200';
                icon = 'verified';
            }
        %>

        <div class="col-span-1 lg:col-span-2 grid grid-cols-1 sm:grid-cols-3 gap-6">
            
            <div class="<%= cardClass %> p-6 rounded-2xl shadow-lg border relative overflow-hidden group transform hover:-translate-y-1 transition-all duration-300">
                <div class="absolute top-0 right-0 -mr-8 -mt-8 w-32 h-32 bg-white opacity-10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>
                
                <div class="flex justify-between items-start mb-8 relative z-10">
                    <div>
                        <span class="block text-xs font-bold uppercase tracking-[0.2em] opacity-80 mb-1">Status</span>
                        <h3 class="text-2xl font-black italic tracking-tighter uppercase"><%= level %></h3>
                    </div>
                    <span class="material-icons-outlined text-4xl opacity-80"><%= icon %></span>
                </div>

                <div class="relative z-10">
                    <span class="block text-4xl font-bold mb-1">Tk. <%= total.toLocaleString() %></span>
                    <span class="text-xs font-bold uppercase tracking-widest opacity-70">Total Lifetime Value</span>
                    
                    <div class="mt-4 pt-4 border-t border-black/10 flex items-center justify-between">
                        <span class="text-xs font-medium opacity-80">Total Orders</span>
                        <span class="text-sm font-bold font-mono bg-white/20 px-2 py-1 rounded"><%= stats.total_count || 0 %></span>
                    </div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-blue-100 hover:shadow-md hover:border-blue-200 transition-all duration-300 group">
                <div class="w-10 h-10 bg-blue-50 text-blue-600 rounded-full flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                    <span class="material-icons-outlined">public</span>
                </div>
                
                <span class="block text-2xl font-bold text-gray-900 mb-1">Tk. <%= (stats.online_ltv || 0).toLocaleString() %></span>
                <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">Online Spend</span>

                <div class="mt-6 pt-4 border-t border-gray-50 flex justify-between items-center">
                    <span class="text-[10px] uppercase font-bold text-gray-400">Count</span>
                    <span class="text-xs font-mono font-bold text-blue-600 bg-blue-50 px-2 py-1 rounded"><%= stats.online_count || 0 %></span>
                </div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-purple-100 hover:shadow-md hover:border-purple-200 transition-all duration-300 group">
                <div class="w-10 h-10 bg-purple-50 text-purple-600 rounded-full flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                    <span class="material-icons-outlined">point_of_sale</span>
                </div>
                
                <span class="block text-2xl font-bold text-gray-900 mb-1">Tk. <%= (stats.pos_ltv || 0).toLocaleString() %></span>
                <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">POS Spend</span>

                <div class="mt-6 pt-4 border-t border-gray-50 flex justify-between items-center">
                    <span class="text-[10px] uppercase font-bold text-gray-400">Count</span>
                    <span class="text-xs font-mono font-bold text-purple-600 bg-purple-50 px-2 py-1 rounded"><%= stats.pos_count || 0 %></span>
                </div>
            </div>

        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-5 border-b border-gray-100 flex items-center gap-2">
            <span class="material-icons-outlined text-gray-400">history</span>
            <h3 class="font-bold text-gray-800">Order History</h3>
        </div>
        
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-left text-gray-500">
                <thead class="text-xs text-gray-400 uppercase bg-gray-50/50 font-bold tracking-wider">
                    <tr>
                        <th class="px-6 py-4">Date</th>
                        <th class="px-6 py-4">Order #</th>
                        <th class="px-6 py-4">Source</th>
                        <th class="px-6 py-4">Status</th>
                        <th class="px-6 py-4 text-center">Items</th>
                        <th class="px-6 py-4 text-right">Total</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    <% orders.forEach(o => { %>
                    <tr class="bg-white hover:bg-gray-50 transition-colors cursor-pointer group"
                        @click="
                            modalOpen = true; 
                            modalOrder = null; 
                            fetch('/admin/customers/api/order/<%= o.id %>')
                                .then(r => r.json())
                                .then(data => { modalOrder = data.order; modalItems = data.items; })
                        ">
                        <td class="px-6 py-4 font-mono text-xs"><%= new Date(o.created_at).toLocaleDateString() %></td>
                        <td class="px-6 py-4">
                            <span class="font-bold text-gray-700 group-hover:text-blue-600 transition-colors"><%= o.order_number %></span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="text-[10px] font-bold uppercase tracking-widest text-gray-400 border border-gray-200 px-2 py-1 rounded"><%= o.order_source %></span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="px-2.5 py-1 rounded-full text-[10px] font-bold uppercase tracking-wide
                                <%= o.status === 'delivered' || o.status === 'POS Complete' ? 'bg-green-100 text-green-700' : 
                                   (o.status === 'cancelled' ? 'bg-red-50 text-red-600' : 'bg-yellow-50 text-yellow-700') %>">
                                <%= o.status %>
                            </span>
                        </td>
                        <td class="px-6 py-4 text-center text-gray-400 font-medium"><%= o.total_qty %></td>
                        <td class="px-6 py-4 text-right font-mono font-bold text-gray-900">Tk. <%= o.total_amount %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('partials/order_modal') %>

</div>