<% if (typeof error !== 'undefined' && error) { %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 shadow-sm rounded-r">
        <p class="font-bold">Error Processing Run</p>
        <p><%= error %></p>
    </div>
<% } %>

<% if (typeof success !== 'undefined' && success) { %>
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 shadow-sm rounded-r">
        <p class="font-bold">Success</p>
        <p><%= success %></p>
    </div>
<% } %>

<div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Production Dashboard</h1>
    <a href="/admin/production/create" class="bg-blue-600 text-white px-5 py-2.5 rounded-lg shadow hover:bg-blue-700 flex items-center gap-2">
        <span class="material-icons-outlined">add</span> Start New Run
    </a>
</div>

<h3 class="text-gray-500 font-bold uppercase text-xs mb-3 tracking-wider">In Progress</h3>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
    <% if (activeRuns.length === 0) { %>
        <div class="col-span-full py-10 text-center bg-gray-50 rounded-xl border border-dashed border-gray-300 text-gray-400">
            No active production runs.
        </div>
    <% } %>

    <% activeRuns.forEach(run => { %>
    <div class="bg-white p-5 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-all relative overflow-hidden group">
        <div class="absolute top-0 left-0 w-1 h-full bg-blue-500"></div>
        
        <div class="flex justify-between items-start mb-3">
            <div>
                <span class="text-xs font-mono text-gray-400">#<%= run.run_number %></span>
                <h4 class="font-bold text-gray-900 text-lg mt-1"><%= run.product_name %></h4>
                <p class="text-sm text-gray-500"><%= run.note || 'No notes' %></p>
            </div>
            <span class="bg-blue-50 text-blue-700 text-xs font-bold px-2 py-1 rounded border border-blue-100 uppercase">Production</span>
        </div>

        <div class="flex justify-between items-center py-3 border-t border-gray-100 mt-2">
            <div class="text-center">
                <p class="text-xs text-gray-400">Quantity</p>
                <p class="font-bold text-gray-800 text-lg"><%= run.quantity_produced %></p>
            </div>
            <div class="text-center">
                <p class="text-xs text-gray-400">Est. Cost</p>
                <p class="font-bold text-gray-800 text-lg">৳<%= parseFloat(run.total_cost).toLocaleString() %></p>
            </div>
            <div class="text-center">
                <p class="text-xs text-gray-400">Unit Cost</p>
                <p class="font-bold text-green-600 text-lg">৳<%= parseFloat(run.cost_per_unit).toFixed(2) %></p>
            </div>
        </div>

        <button onclick="openCompleteModal('<%= run.id %>', '<%= run.run_number %>', <%= run.total_cost - (run.total_cost * 0.8) %>)" 
                class="w-full mt-2 bg-gray-900 text-white py-2 rounded-lg text-sm font-bold hover:bg-gray-800 flex items-center justify-center gap-2">
            <span class="material-icons-outlined text-[16px]">check_circle</span>
            Complete & Stock
        </button>
    </div>
    <% }); %>
</div>

<div id="completeModal" class="fixed inset-0 bg-black/50 hidden z-50 flex items-center justify-center backdrop-blur-sm">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-md overflow-hidden">
        <div class="bg-gray-900 px-6 py-4 flex justify-between items-center">
            <h3 class="text-white font-bold" id="modalRunTitle">Complete Production</h3>
            <button onclick="document.getElementById('completeModal').classList.add('hidden')" class="text-gray-400 hover:text-white">&times;</button>
        </div>
        
        <form id="completeForm" method="POST" class="p-6">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="mb-4">
                <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Actual Labor / Other Costs</label>
                <div class="relative">
                    <span class="absolute left-3 top-2.5 text-gray-500">৳</span>
                    <input type="number" step="0.01" name="actual_labor_cost" id="modalLaborCost" class="w-full pl-8 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-black outline-none" placeholder="0.00">
                </div>
                <p class="text-xs text-gray-400 mt-1">This amount will be added to Product Cost.</p>
            </div>

            <div class="mb-6">
                <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Pay From Account</label>
                <select name="payment_account_id" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-black outline-none">
                    <option value="">-- None (Record Cost Only) --</option>
                    <% if(typeof accounts !== 'undefined') { %>
                        <% accounts.forEach(acc => { %>
                            <option value="<%= acc.id %>"><%= acc.account_name %> (<%= acc.bank_name %>)</option>
                        <% }); %>
                    <% } %>
                </select>
                <p class="text-xs text-gray-400 mt-1">Select account to deduct money immediately.</p>
            </div>

            <button type="submit" class="w-full bg-green-600 text-white py-3 rounded-lg font-bold hover:bg-green-700 shadow-lg flex items-center justify-center gap-2">
                <span class="material-icons-outlined">inventory_2</span>
                Confirm & Add to Stock
            </button>
        </form>
    </div>
</div>

<script>
    function openCompleteModal(id, runNumber, estimatedLabor) {
        // Update Form Action
        document.getElementById('completeForm').action = `/admin/production/finalize/${id}`;
        // Update Title
        document.getElementById('modalRunTitle').innerText = `Complete ${runNumber}`;
        // Optional: Pre-fill the estimated labor cost if you want
        // document.getElementById('modalLaborCost').value = estimatedLabor.toFixed(2);
        
        // Show Modal
        document.getElementById('completeModal').classList.remove('hidden');
    }
</script>

<h3 class="text-gray-500 font-bold uppercase text-xs mb-3 tracking-wider">Recent History</h3>
<div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
    <table class="w-full text-left border-collapse">
        <thead class="bg-gray-50 text-xs text-gray-500 uppercase font-bold">
            <tr>
                <th class="px-6 py-4">Date</th>
                <th class="px-6 py-4">Run #</th>
                <th class="px-6 py-4">Product</th>
                <th class="px-6 py-4 text-center">Qty</th>
                <th class="px-6 py-4 text-right">Total Cost</th>
                <th class="px-6 py-4 text-center">Status</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
            <% history.forEach(h => { %>
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-sm text-gray-500"><%= new Date(h.completion_date).toLocaleDateString() %></td>
                <td class="px-6 py-4 font-mono text-xs text-blue-600"><%= h.run_number %></td>
                <td class="px-6 py-4 font-medium text-gray-900"><%= h.product_name %></td>
                <td class="px-6 py-4 text-center font-bold"><%= h.quantity_produced %></td>
                <td class="px-6 py-4 text-right font-mono">৳<%= parseFloat(h.total_cost).toLocaleString() %></td>
                <td class="px-6 py-4 text-center">
                    <span class="bg-green-100 text-green-800 text-xs font-bold px-2 py-1 rounded">Done</span>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>