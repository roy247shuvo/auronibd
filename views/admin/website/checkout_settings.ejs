<div class="flex flex-col gap-6">
    <% if (!can('site_settings', 'write')) { %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r shadow-sm">
        <div class="flex">
            <div class="flex-shrink-0">
                <span class="material-icons-outlined text-yellow-400">lock</span>
            </div>
            <div class="ml-3">
                <p class="text-sm text-yellow-700">
                    <span class="font-bold">View Only Mode:</span> You do not have permission to modify checkout settings.
                </p>
            </div>
        </div>
    </div>
    <% } %>

    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Checkout Options</h1>
            <p class="text-sm text-gray-500">Manage delivery charges and payment gateways.</p>
        </div>
    </div>

    <form action="/admin/website/checkout-options" method="POST" class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-50 flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-blue-50 text-blue-600 flex items-center justify-center">
                    <i class="fas fa-truck"></i>
                </div>
                <h3 class="font-bold text-gray-800">Delivery Charges</h3>
            </div>
            
            <div class="p-6 space-y-6">
                <div>
                    <label class="block text-xs font-bold uppercase text-gray-500 mb-2">Inside Dhaka Rate (TK)</label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 font-bold">৳</span>
                        <input type="number" name="delivery_inside" value="<%= settings.delivery_inside_dhaka %>" 
                               class="w-full pl-8 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:bg-white focus:border-blue-500 outline-none transition font-bold text-gray-800 disabled:text-gray-500"
                               <%= can('site_settings', 'write') ? '' : 'disabled' %>>
                    </div>
                </div>
                
                <div>
                    <label class="block text-xs font-bold uppercase text-gray-500 mb-2">Outside Dhaka Rate (TK)</label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 font-bold">৳</span>
                        <input type="number" name="delivery_outside" value="<%= settings.delivery_outside_dhaka %>" 
                               class="w-full pl-8 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:bg-white focus:border-blue-500 outline-none transition font-bold text-gray-800 disabled:text-gray-500"
                               <%= can('site_settings', 'write') ? '' : 'disabled' %>>
                    </div>
                </div>
            </div>
        </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-50 flex items-center gap-3">
            <div class="w-8 h-8 rounded-full bg-purple-50 text-purple-600 flex items-center justify-center">
                <i class="fas fa-hand-holding-usd"></i>
            </div>
            <h3 class="font-bold text-gray-800">COD Options</h3>
        </div>
        <div class="p-6 flex items-center justify-between">
            <div>
                <h4 class="font-bold text-gray-800">Take Advance Delivery Fee</h4>
                <p class="text-xs text-gray-500">If on, customers must pay delivery charge via bKash to confirm COD orders.</p>
            </div>
            <label class="relative inline-flex items-center <%= can('site_settings', 'write') ? 'cursor-pointer' : 'cursor-not-allowed opacity-60' %>">
                <input type="checkbox" name="checkout_advance_delivery" value="yes" class="sr-only peer" 
                       <%= settings.checkout_advance_delivery === 'yes' ? 'checked' : '' %>
                       <%= can('site_settings', 'write') ? '' : 'disabled' %>>
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
            </label>
        </div>
        <input type="hidden" name="checkout_advance_delivery" value="no" disabled>
        <script>
            document.querySelector('input[type="checkbox"][name="checkout_advance_delivery"]').addEventListener('change', function() {
                this.value = this.checked ? 'yes' : 'no';
            });
        </script>
    </div>

     <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-50 flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-pink-50 text-pink-600 flex items-center justify-center">
                    <i class="fas fa-wallet"></i>
                </div>
                <h3 class="font-bold text-gray-800">Payment Methods</h3>
            </div>
            
            <div class="p-6 space-y-6">
                
                <div class="flex items-center justify-between p-4 border border-pink-100 bg-pink-50/30 rounded-lg">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-white rounded-lg p-2 shadow-sm border border-pink-100 flex items-center justify-center">
                            <img src="/uploads/bkash.png" alt="bKash" class="w-full h-full object-contain">
                        </div>
                        <div>
                            <h4 class="font-bold text-gray-800">bKash Payment</h4>
                            <p class="text-xs text-gray-500">Allow customers to pay via bKash</p>
                        </div>
                    </div>
                    
                    <label class="relative inline-flex items-center <%= can('site_settings', 'write') ? 'cursor-pointer' : 'cursor-not-allowed opacity-60' %>">
                        <input type="checkbox" name="bkash_enabled" value="yes" class="sr-only peer" 
                               <%= settings.bkash_enabled === 'yes' ? 'checked' : '' %>
                               <%= can('site_settings', 'write') ? '' : 'disabled' %>>
                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-600"></div>
                    </label>
                </div>

                <input type="hidden" name="bkash_enabled" value="no" disabled>
                <script>
                    document.querySelector('input[type="checkbox"][name="bkash_enabled"]').addEventListener('change', function() {
                        this.value = this.checked ? 'yes' : 'no';
                    });
                </script>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-50 flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-green-50 text-green-600 flex items-center justify-center">
                    <i class="fas fa-university"></i>
                </div>
                <h3 class="font-bold text-gray-800">Deposit Settings</h3>
            </div>
            <div class="p-6">
                <label class="block text-sm font-bold text-gray-700 mb-2">Deposit Online Payments (Bkash/Advance) To:</label>
                <select name="bkash_deposit_account_id" 
                        class="w-full border border-gray-300 rounded-lg px-3 py-2 outline-none focus:border-black disabled:bg-gray-100 disabled:text-gray-500"
                        <%= can('site_settings', 'write') ? '' : 'disabled' %>>
                    <option value="">-- Select Account --</option>
                    <% accounts.forEach(acc => { %>
                        <option value="<%= acc.id %>" <%= settings.bkash_deposit_account_id == acc.id ? 'selected' : '' %>>
                            <%= acc.account_name %> (<%= acc.bank_name %>)
                        </option>
                    <% }) %>
                </select>
                <p class="text-xs text-gray-500 mt-1">Funds from online orders will be added to this account automatically.</p>
            </div>
        </div>

        <% if (can('site_settings', 'write')) { %>
        <div class="lg:col-span-2">
            <button type="submit" class="w-full md:w-auto bg-black text-white px-8 py-3 rounded-lg font-bold hover:bg-gray-800 transition shadow-lg flex items-center justify-center gap-2">
                <i class="fas fa-save"></i>
                Save Changes
            </button>
        </div>
        <% } %>

    </form>
</div>