<div x-data="{ activeTab: 'overview', showInvestModal: false, showWithdrawModal: false }">
    
    <% if (!can('acc_reports', 'write')) { %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6 rounded-r shadow-sm">
        <div class="flex">
            <div class="flex-shrink-0">
                <span class="material-icons-outlined text-yellow-400">lock</span>
            </div>
            <div class="ml-3">
                <p class="text-sm text-yellow-700">
                    <span class="font-bold">View Only Mode:</span> You do not have permission to modify financial data.
                </p>
            </div>
        </div>
    </div>
    <% } %>

    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Financial Position</h1>
            <p class="text-sm text-gray-500 mt-1">The Golden Equation: Assets = Liabilities + Equity</p>
        </div>
        
        <div class="flex items-center gap-2">
            <div class="bg-gray-100 p-1 rounded-xl flex mr-4">
                <button @click="activeTab = 'overview'" 
                        :class="activeTab === 'overview' ? 'bg-white text-gray-900 shadow-sm' : 'text-gray-500 hover:text-gray-700'"
                        class="px-4 py-2 rounded-lg text-sm font-medium transition-all flex items-center gap-2">
                    <span class="material-icons-outlined text-[18px]">dashboard</span> Overview
                </button>
                <button @click="activeTab = 'history'" 
                        :class="activeTab === 'history' ? 'bg-white text-gray-900 shadow-sm' : 'text-gray-500 hover:text-gray-700'"
                        class="px-4 py-2 rounded-lg text-sm font-medium transition-all flex items-center gap-2">
                    <span class="material-icons-outlined text-[18px]">history</span> History
                </button>
            </div>

            <% if (can('acc_reports', 'write')) { %>
            <button @click="showWithdrawModal = true" class="bg-white border border-gray-200 text-gray-700 px-4 py-2.5 rounded-lg text-sm font-bold hover:bg-red-50 hover:text-red-600 hover:border-red-200 transition-all flex items-center gap-2">
                <span class="material-icons-outlined text-[18px]">output</span> Withdraw
            </button>
            <button @click="showInvestModal = true" class="bg-gray-900 text-white px-4 py-2.5 rounded-lg text-sm font-bold hover:bg-gray-800 hover:shadow-lg transition-all flex items-center gap-2">
                <span class="material-icons-outlined text-[18px]">add</span> Inject
            </button>
            <% } %>
        </div>
    </div>

    <div x-show="activeTab === 'overview'" x-transition:enter="transition ease-out duration-300">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            
            <div class="bg-white rounded-2xl border-t-4 border-green-500 shadow-[0_4px_20px_rgba(0,0,0,0.05)] p-6 relative overflow-hidden group">
                <div class="flex justify-between items-start mb-4">
                    <h3 class="text-xs font-bold text-green-600 uppercase tracking-widest bg-green-50 px-2 py-1 rounded">Assets (Own)</h3>
                </div>
                <div class="text-3xl font-bold text-gray-900 mb-6">৳<%= stats.assets.total.toLocaleString() %></div>
                
                <div class="space-y-3 pt-4 border-t border-dashed border-gray-100">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-500 flex items-center gap-2"><span class="w-1.5 h-1.5 rounded-full bg-green-500"></span> Cash & Bank</span>
                        <span class="font-bold text-gray-700">৳<%= stats.assets.cash.toLocaleString() %></span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-500 flex items-center gap-2"><span class="w-1.5 h-1.5 rounded-full bg-blue-500"></span> Inventory</span>
                        <span class="font-bold text-gray-700">৳<%= stats.assets.inventory.toLocaleString() %></span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-500 flex items-center gap-2"><span class="w-1.5 h-1.5 rounded-full bg-orange-500"></span> Pending COD</span>
                        <span class="font-bold text-gray-700">৳<%= stats.assets.receivables.toLocaleString() %></span>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl border-t-4 border-red-400 shadow-[0_4px_20px_rgba(0,0,0,0.05)] p-6">
                <div class="flex justify-between items-start mb-4">
                    <h3 class="text-xs font-bold text-red-500 uppercase tracking-widest bg-red-50 px-2 py-1 rounded">Liabilities (Owe)</h3>
                </div>
                <div class="text-3xl font-bold text-gray-900 mb-6">৳<%= stats.liabilities.total.toLocaleString() %></div>
                
                <div class="space-y-3 pt-4 border-t border-dashed border-gray-100">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-500 flex items-center gap-2">
                            <span class="w-1.5 h-1.5 rounded-full bg-red-500"></span> Vendor Payables
                        </span>
                        <span class="font-bold text-gray-700">৳<%= stats.liabilities.total.toLocaleString() %></span>
                    </div>
                    <div class="mt-2 text-xs text-gray-400">
                        Money owed to suppliers for unpaid Purchase Orders.
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl border-t-4 border-blue-500 shadow-[0_4px_20px_rgba(0,0,0,0.05)] p-6">
                <div class="flex justify-between items-start mb-4">
                    <h3 class="text-xs font-bold text-blue-600 uppercase tracking-widest bg-blue-50 px-2 py-1 rounded">Equity (Net Worth)</h3>
                </div>
                <div class="text-3xl font-bold text-gray-900 mb-6">৳<%= stats.equity.total.toLocaleString() %></div>
                
                <div class="space-y-3 pt-4 border-t border-dashed border-gray-100">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-500">Owner's Investment</span>
                        <span class="font-bold text-gray-700">৳<%= stats.equity.capital.toLocaleString() %></span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-500">Retained Earnings</span>
                        <span class="font-bold <%= stats.equity.earnings >= 0 ? 'text-green-600' : 'text-red-600' %>">
                            ৳<%= stats.equity.earnings.toLocaleString() %>
                        </span>
                    </div>
                    <div class="mt-2 text-xs text-gray-400">
                        (Assets - Liabilities) = True Business Value
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div x-show="activeTab === 'history'" x-transition:enter="transition ease-out duration-300" class="hidden" :class="{ 'hidden': activeTab !== 'history' }">
        <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
            <table class="w-full text-left border-collapse">
                <thead class="bg-gray-50 text-gray-500 text-xs uppercase tracking-wider font-bold border-b border-gray-100">
                    <tr>
                        <th class="px-6 py-4">Date</th>
                        <th class="px-6 py-4">Type</th>
                        <th class="px-6 py-4">Description</th>
                        <th class="px-6 py-4">Account</th>
                        <th class="px-6 py-4 text-right">Amount</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    <% history.forEach(tx => { %>
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 text-sm font-bold text-gray-700">
                            <%= new Date(tx.investment_date).toLocaleDateString('en-GB') %>
                        </td>
                        <td class="px-6 py-4">
                            <% if (tx.type === 'deposit') { %>
                                <span class="bg-green-100 text-green-700 px-2 py-1 rounded text-xs font-bold uppercase">Inject</span>
                            <% } else { %>
                                <span class="bg-red-100 text-red-700 px-2 py-1 rounded text-xs font-bold uppercase">Withdraw</span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                            <%= tx.note || 'No description' %>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                            <%= tx.account_name %>
                        </td>
                        <td class="px-6 py-4 text-right font-mono font-bold <%= tx.type === 'deposit' ? 'text-green-600' : 'text-red-600' %>">
                            <%= tx.type === 'deposit' ? '+' : '-' %>৳<%= parseFloat(tx.amount).toLocaleString() %>
                        </td>
                    </tr>
                    <% }); %>
                    <% if(history.length === 0) { %>
                        <tr><td colspan="5" class="px-6 py-12 text-center text-gray-400">No capital transactions recorded yet.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <div x-show="showInvestModal" class="fixed inset-0 bg-black/50 z-50 flex items-center justify-center backdrop-blur-sm" style="display: none;">
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-md overflow-hidden animate-fade-in-up">
            <div class="bg-gray-900 px-6 py-4 flex justify-between items-center">
                <h3 class="text-white font-bold">Inject Capital (Deposit)</h3>
                <button @click="showInvestModal = false" class="text-gray-400 hover:text-white">&times;</button>
            </div>
            <form action="/admin/accounts/capital/add" method="POST" class="p-6">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="mb-4">
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Amount to Invest</label>
                    <div class="relative">
                        <span class="absolute left-3 top-2.5 text-gray-500">৳</span>
                        <input type="number" step="0.01" name="amount" class="w-full pl-8 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-black outline-none disabled:bg-gray-100 disabled:text-gray-500" required <%= can('acc_reports', 'write') ? '' : 'disabled' %>>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Deposit To</label>
                    <select name="target_account_id" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-black outline-none disabled:bg-gray-100 disabled:text-gray-500" required <%= can('acc_reports', 'write') ? '' : 'disabled' %>>
                        <% accounts.forEach(acc => { %>
                            <option value="<%= acc.id %>"><%= acc.account_name %> (<%= acc.bank_name %>)</option>
                        <% }); %>
                    </select>
                </div>
                <div class="mb-4">
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Date</label>
                    <input type="date" name="investment_date" class="w-full px-4 py-2 border rounded-lg disabled:bg-gray-100 disabled:text-gray-500" value="<%= new Date().toISOString().split('T')[0] %>" required <%= can('acc_reports', 'write') ? '' : 'disabled' %>>
                </div>
                <div class="mb-6">
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Note</label>
                    <textarea name="note" class="w-full px-4 py-2 border rounded-lg disabled:bg-gray-100 disabled:text-gray-500" placeholder="e.g. Initial Investment" <%= can('acc_reports', 'write') ? '' : 'disabled' %>></textarea>
                </div>
                <% if (can('acc_reports', 'write')) { %>
                <button type="submit" class="w-full bg-gray-900 text-white py-3 rounded-lg font-bold hover:bg-gray-800">Confirm Deposit</button>
                <% } %>
            </form>
        </div>
    </div>

    <div x-show="showWithdrawModal" class="fixed inset-0 bg-black/50 z-50 flex items-center justify-center backdrop-blur-sm" style="display: none;">
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-md overflow-hidden animate-fade-in-up">
            <div class="bg-red-900 px-6 py-4 flex justify-between items-center">
                <h3 class="text-white font-bold">Withdraw Capital (Owner Draw)</h3>
                <button @click="showWithdrawModal = false" class="text-red-200 hover:text-white">&times;</button>
            </div>
            <form action="/admin/accounts/capital/withdraw" method="POST" class="p-6">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="mb-4">
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Amount to Withdraw</label>
                    <div class="relative">
                        <span class="absolute left-3 top-2.5 text-gray-500">৳</span>
                        <input type="number" step="0.01" name="amount" class="w-full pl-8 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-red-900 outline-none disabled:bg-gray-100 disabled:text-gray-500" required <%= can('acc_reports', 'write') ? '' : 'disabled' %>>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Withdraw From</label>
                    <select name="target_account_id" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-red-900 outline-none disabled:bg-gray-100 disabled:text-gray-500" required <%= can('acc_reports', 'write') ? '' : 'disabled' %>>
                        <% accounts.forEach(acc => { %>
                            <option value="<%= acc.id %>"><%= acc.account_name %> (৳<%= acc.current_balance %>)</option>
                        <% }); %>
                    </select>
                </div>
                <div class="mb-4">
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Date</label>
                    <input type="date" name="investment_date" class="w-full px-4 py-2 border rounded-lg disabled:bg-gray-100 disabled:text-gray-500" value="<%= new Date().toISOString().split('T')[0] %>" required <%= can('acc_reports', 'write') ? '' : 'disabled' %>>
                </div>
                <div class="mb-6">
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Note</label>
                    <textarea name="note" class="w-full px-4 py-2 border rounded-lg disabled:bg-gray-100 disabled:text-gray-500" placeholder="e.g. Personal Use" <%= can('acc_reports', 'write') ? '' : 'disabled' %>></textarea>
                </div>
                <% if (can('acc_reports', 'write')) { %>
                <button type="submit" class="w-full bg-red-900 text-white py-3 rounded-lg font-bold hover:bg-red-800">Confirm Withdrawal</button>
                <% } %>
            </form>
        </div>
    </div>

</div>