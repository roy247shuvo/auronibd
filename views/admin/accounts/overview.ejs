<div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
    <div>
        <h1 class="text-2xl font-bold text-gray-800">Financial Overview</h1>
        <p class="text-sm text-gray-500">Snapshot of your cash flow and accounts</p>
    </div>
    <div class="flex gap-2">
        <a href="/admin/accounts/transfers" class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg text-sm font-bold hover:bg-gray-50 transition flex items-center gap-2">
            <span class="material-icons-outlined text-[18px]">swap_horiz</span> Transfers
        </a>
        <a href="/admin/accounts/expenses" class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg text-sm font-bold hover:bg-gray-50 transition flex items-center gap-2">
            <span class="material-icons-outlined text-[18px]">receipt_long</span> Expenses
        </a>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-gradient-to-r from-gray-900 to-gray-800 rounded-xl p-6 text-white shadow-lg">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-white/10 rounded-lg">
                <span class="material-icons-outlined text-3xl">account_balance_wallet</span>
            </div>
            <div>
                <p class="text-gray-400 text-sm font-medium">Total Liquid Funds</p>
                <h3 class="text-2xl font-bold">৳ <%= totalBalance.toLocaleString() %></h3>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl p-6 border border-gray-100 shadow-sm">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-blue-50 text-blue-600 rounded-lg">
                <span class="material-icons-outlined text-3xl">account_balance</span>
            </div>
            <div>
                <p class="text-gray-500 text-sm font-medium">Active Accounts</p>
                <h3 class="text-2xl font-bold text-gray-800"><%= accounts.length %></h3>
            </div>
        </div>
    </div>
</div>

<h2 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
    <span class="material-icons-outlined text-gray-400">dns</span> Account Balances
</h2>
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <% accounts.forEach(acc => { %>
        <div class="bg-white p-5 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition">
            <div class="flex justify-between items-start mb-2">
                <div class="p-2 rounded-lg <%= acc.bank_name.toLowerCase().includes('bkash') ? 'bg-pink-50 text-pink-600' : 'bg-gray-100 text-gray-600' %>">
                    <span class="material-icons-outlined"><%= acc.bank_name.toLowerCase().includes('cash') ? 'payments' : 'account_balance' %></span>
                </div>
                <% if(acc.is_default) { %>
                    <span class="bg-green-100 text-green-700 text-[10px] font-bold px-2 py-1 rounded uppercase">Default</span>
                <% } %>
            </div>
            <h4 class="text-gray-500 text-sm font-medium"><%= acc.bank_name %></h4>
            <p class="text-xl font-bold text-gray-900 mt-1">৳ <%= Number(acc.current_balance || 0).toLocaleString() %></p>
            <p class="text-xs text-gray-400 mt-1"><%= acc.account_number %></p>
        </div>
    <% }) %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 bg-gray-50 flex justify-between items-center">
            <h3 class="font-bold text-gray-700">Recent Expenses</h3>
            <a href="/admin/accounts/expenses" class="text-xs text-indigo-600 font-bold hover:underline">View All</a>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-500 uppercase bg-gray-50">
                    <tr>
                        <th class="px-6 py-3">Date</th>
                        <th class="px-6 py-3">Category</th>
                        <th class="px-6 py-3 text-right">Amount</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    <% recentExpenses.forEach(exp => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-3 text-gray-600"><%= new Date(exp.expense_date).toLocaleDateString() %></td>
                        <td class="px-6 py-3 font-medium text-gray-800"><%= exp.category %></td>
                        <td class="px-6 py-3 text-right font-bold text-red-500">- ৳<%= exp.amount %></td>
                    </tr>
                    <% }) %>
                    <% if (recentExpenses.length === 0) { %>
                    <tr>
                        <td colspan="3" class="px-6 py-4 text-center text-gray-400">No recent expenses</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 bg-gray-50 flex justify-between items-center">
            <h3 class="font-bold text-gray-700">Recent Transfers</h3>
            <a href="/admin/accounts/transfers" class="text-xs text-indigo-600 font-bold hover:underline">View All</a>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-500 uppercase bg-gray-50">
                    <tr>
                        <th class="px-6 py-3">From</th>
                        <th class="px-6 py-3">To</th>
                        <th class="px-6 py-3 text-right">Amount</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    <% recentTransfers.forEach(trx => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-3 text-gray-600"><%= trx.from_name %></td>
                        <td class="px-6 py-3 text-gray-600"><%= trx.to_name %></td>
                        <td class="px-6 py-3 text-right font-bold text-gray-800">৳<%= trx.amount %></td>
                    </tr>
                    <% }) %>
                    <% if (recentTransfers.length === 0) { %>
                    <tr>
                        <td colspan="3" class="px-6 py-4 text-center text-gray-400">No recent transfers</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>