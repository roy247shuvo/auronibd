<div x-data="{ activeTab: 'list' }">
    
    <% if (!can('acc_expenses', 'write')) { %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6 rounded-r shadow-sm">
        <div class="flex">
            <div class="flex-shrink-0">
                <span class="material-icons-outlined text-yellow-400">lock</span>
            </div>
            <div class="ml-3">
                <p class="text-sm text-yellow-700">
                    <span class="font-bold">View Only Mode:</span> You do not have permission to add or delete expenses.
                </p>
            </div>
        </div>
    </div>
    <% } %>

    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Expense Manager</h1>
            <p class="text-sm text-gray-500 mt-1">Track operational costs like rent, salaries, and bills.</p>
        </div>
        
        <div class="bg-gray-100 p-1 rounded-xl flex items-center gap-1">
            <button @click="activeTab = 'list'" 
                    :class="activeTab === 'list' ? 'bg-white text-gray-900 shadow-sm' : 'text-gray-500 hover:text-gray-700'"
                    class="px-4 py-2 rounded-lg text-sm font-medium transition-all flex items-center gap-2">
                <span class="material-icons-outlined text-[18px]">list</span> All Expenses
            </button>
            <% if (can('acc_expenses', 'write')) { %>
            <button @click="activeTab = 'add'" 
                    :class="activeTab === 'add' ? 'bg-white text-gray-900 shadow-sm' : 'text-gray-500 hover:text-gray-700'"
                    class="px-4 py-2 rounded-lg text-sm font-medium transition-all flex items-center gap-2">
                <span class="material-icons-outlined text-[18px]">add_circle</span> Add New
            </button>
            <% } %>
        </div>
    </div>

    <div x-show="activeTab === 'add'" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 translate-y-2" x-transition:enter-end="opacity-100 translate-y-0" class="hidden" :class="{ 'hidden': activeTab !== 'add' }">
        <div class="bg-white rounded-2xl border border-gray-100 shadow-sm max-w-3xl mx-auto overflow-hidden">
            <div class="px-8 py-6 border-b border-gray-100 bg-gray-50/50">
                <h2 class="text-lg font-bold text-gray-900">Record New Expense</h2>
                <p class="text-xs text-gray-500 mt-1">Money will be deducted from the selected account immediately.</p>
            </div>
            
            <form action="/admin/accounts/expenses/add" method="POST" class="p-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    
                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Category</label>
                        <select name="category" class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-gray-200 focus:border-gray-400 outline-none transition-all cursor-pointer disabled:bg-gray-100 disabled:text-gray-500" required <%= can('acc_expenses', 'write') ? '' : 'disabled' %>>
                            <option value="salary">Salary & Wages</option>
                            <option value="rent">Rent</option>
                            <option value="utility">Utility Bills</option>
                            <option value="marketing">Marketing & PR</option>
                            <option value="packaging">Packaging Material</option>
                            <option value="transport">Transport & Courier</option>
                            <option value="other">Other</option>
                        </select>
                    </div>

                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Title</label>
                        <input type="text" name="title" placeholder="e.g. January Shop Rent" class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-gray-200 focus:border-gray-400 outline-none transition-all disabled:bg-gray-100 disabled:text-gray-500" required <%= can('acc_expenses', 'write') ? '' : 'disabled' %>>
                    </div>

                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Amount (BDT)</label>
                        <div class="relative">
                            <span class="absolute left-4 top-3.5 text-gray-400 font-bold">৳</span>
                            <input type="number" step="0.01" name="amount" class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-gray-200 focus:border-gray-400 outline-none transition-all font-bold text-gray-900 disabled:bg-gray-100 disabled:text-gray-500" required <%= can('acc_expenses', 'write') ? '' : 'disabled' %>>
                        </div>
                    </div>

                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Paid From</label>
                        <select name="account_id" class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-gray-200 focus:border-gray-400 outline-none transition-all cursor-pointer disabled:bg-gray-100 disabled:text-gray-500" required <%= can('acc_expenses', 'write') ? '' : 'disabled' %>>
                            <% accounts.forEach(acc => { %>
                                <option value="<%= acc.id %>">
                                    <%= acc.account_name %> (<%= acc.bank_name %>) - ৳<%= acc.current_balance %>
                                </option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="col-span-1 md:col-span-2 my-2 border-t border-gray-100"></div>

                    <div class="col-span-1 bg-blue-50 p-4 rounded-xl border border-blue-100">
                        <label class="block text-xs font-bold text-blue-800 uppercase mb-2">Expense For Which Month?</label>
                        <input type="month" name="for_month" class="w-full px-4 py-2 bg-white border border-blue-200 rounded-lg focus:ring-2 focus:ring-blue-200 outline-none text-blue-900 font-bold disabled:bg-gray-100 disabled:text-gray-500" required value="<%= new Date().toISOString().slice(0, 7) %>" <%= can('acc_expenses', 'write') ? '' : 'disabled' %>>
                        <p class="text-[10px] text-blue-600 mt-2">Critical for accurate P/L reports.</p>
                    </div>

                    <div class="col-span-1 p-4">
                        <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Actual Payment Date</label>
                        <input type="date" name="expense_date" class="w-full px-4 py-2 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-gray-200 outline-none disabled:bg-gray-100 disabled:text-gray-500" required value="<%= new Date().toISOString().split('T')[0] %>" <%= can('acc_expenses', 'write') ? '' : 'disabled' %>>
                    </div>

                    <div class="col-span-1 md:col-span-2">
                        <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Note (Optional)</label>
                        <textarea name="note" rows="2" class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-gray-200 focus:border-gray-400 outline-none transition-all disabled:bg-gray-100 disabled:text-gray-500" <%= can('acc_expenses', 'write') ? '' : 'disabled' %>></textarea>
                    </div>
                </div>

                <div class="flex justify-end gap-3 mt-8">
                    <button type="button" @click="activeTab = 'list'" class="px-6 py-2.5 rounded-xl text-sm font-bold text-gray-500 hover:bg-gray-100 transition-colors">
                        Cancel
                    </button>
                    <% if (can('acc_expenses', 'write')) { %>
                    <button type="submit" class="bg-gray-900 text-white px-8 py-2.5 rounded-xl text-sm font-bold hover:bg-gray-800 hover:shadow-lg hover:-translate-y-0.5 transition-all flex items-center gap-2">
                        <span class="material-icons-outlined text-[18px]">check</span> Save Expense
                    </button>
                    <% } %>
                </div>
            </form>
        </div>
    </div>

    <div x-show="activeTab === 'list'" x-transition:enter="transition ease-out duration-300" class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
        
        <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center bg-gray-50/50">
            <h2 class="text-lg font-bold text-gray-800">Expense History</h2>
            
            <form method="GET" class="flex items-center gap-2">
                <input type="month" name="month" class="px-3 py-1.5 text-sm border border-gray-200 rounded-lg focus:outline-none focus:border-black" value="<%= filterMonth %>">
                <button type="submit" class="bg-white border border-gray-200 hover:bg-gray-50 text-gray-600 px-3 py-1.5 rounded-lg text-sm font-medium transition-colors">
                    Filter
                </button>
                <% if(filterMonth) { %>
                    <a href="/admin/accounts/expenses" class="text-red-500 text-sm font-bold hover:underline px-2">Clear</a>
                <% } %>
            </form>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead class="bg-gray-50 text-gray-500 text-xs uppercase tracking-wider font-bold border-b border-gray-100">
                    <tr>
                        <th class="px-6 py-4">Date</th>
                        <th class="px-6 py-4">Title & Note</th>
                        <th class="px-6 py-4 text-center">Category</th>
                        <th class="px-6 py-4">Paid From</th>
                        <th class="px-6 py-4 text-right">Amount</th>
                        <th class="px-6 py-4 text-right">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    <% expenses.forEach(exp => { %>
                    <tr class="hover:bg-gray-50 transition-colors group">
                        <td class="px-6 py-4">
                            <div class="text-sm font-bold text-gray-900">
                                <%= new Date(exp.expense_date).toLocaleDateString('en-GB') %>
                            </div>
                            <div class="text-[10px] text-gray-400 mt-0.5 uppercase tracking-wide font-bold">
                                <%= exp.for_month %>
                            </div>
                        </td>

                        <td class="px-6 py-4">
                            <div class="text-sm font-bold text-gray-800"><%= exp.title %></div>
                            <% if(exp.note) { %>
                                <div class="text-xs text-gray-500 mt-0.5 truncate max-w-[200px]"><%= exp.note %></div>
                            <% } %>
                        </td>

                        <td class="px-6 py-4 text-center">
                            <span class="px-2.5 py-1 rounded-full text-xs font-bold capitalize 
                                <%= exp.category === 'rent' ? 'bg-purple-100 text-purple-700' : 
                                   exp.category === 'salary' ? 'bg-blue-100 text-blue-700' : 
                                   exp.category === 'marketing' ? 'bg-pink-100 text-pink-700' : 'bg-gray-100 text-gray-600' %>">
                                <%= exp.category %>
                            </span>
                        </td>

                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2">
                                <span class="material-icons-outlined text-gray-400 text-[16px]">account_balance_wallet</span>
                                <span class="text-sm text-gray-600 font-medium"><%= exp.account_name %></span>
                            </div>
                        </td>

                        <td class="px-6 py-4 text-right">
                            <span class="text-sm font-bold text-red-600 font-mono bg-red-50 px-2 py-1 rounded border border-red-100">
                                -৳<%= exp.amount.toLocaleString() %>
                            </span>
                        </td>

                        <td class="px-6 py-4 text-right">
                            <% if (can('acc_expenses', 'write')) { %>
                            <form action="/admin/accounts/expenses/delete/<%= exp.id %>" method="POST" onsubmit="return confirm('Are you sure? Money will be refunded to the account.')">
                                <button type="submit" class="text-gray-400 hover:text-red-600 p-1 rounded-full hover:bg-red-50 transition-all" title="Delete Expense">
                                    <span class="material-icons-outlined text-[18px]">delete</span>
                                </button>
                            </form>
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
                    
                    <% if(expenses.length === 0) { %>
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center text-gray-400">
                                <div class="flex flex-col items-center justify-center">
                                    <span class="material-icons-outlined text-4xl mb-2 text-gray-300">receipt_long</span>
                                    <p>No expenses found for this month.</p>
                                    <p class="text-xs mt-1">Click "Add New" to record operational costs.</p>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>